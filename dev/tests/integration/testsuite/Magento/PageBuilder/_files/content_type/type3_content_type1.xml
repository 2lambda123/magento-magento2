<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_type.xsd">
    <content_types>
        <type name="type3" translate="label" sortOrder="3">
            <label>Type 3</label>
            <icon>pagebuilder-type3-icon</icon>
            <component>Path/to/custom/component</component>
            <form>pagebuilder_type3_form</form>
            <group>group1</group>
            <allowed_parents>
                <parent name="stage"/>
            </allowed_parents>
            <appearances>
                <appearance name="default" default="true">
                    <data_mapping>
                        <elements>
                            <element name="main" path=".">
                                <style_properties>
                                    <property name="style_converter" source="converter" converter="Path/to/converter"/>
                                    <property name="style_no_converter" source="no_converter"/>
                                </style_properties>
                                <attributes>
                                    <attribute name="name" source="data-role"/>
                                </attributes>
                                <css name="css_classes"/>
                            </element>
                        </elements>
                    </data_mapping>
                    <preview_template>Path/to/preview/template</preview_template>
                    <render_template>Path/to/render/template</render_template>
                    <reader>Path/to/reader</reader>
                </appearance>
            </appearances>
        </type>
    </content_types>
</config>
