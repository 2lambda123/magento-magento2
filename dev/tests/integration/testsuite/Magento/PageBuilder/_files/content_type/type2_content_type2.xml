<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_types.xsd">
    <content_types>
        <type name="type2" translate="label" sortOrder="2">
            <label>Type 2 Label</label>
            <icon>pagebuilder-type2-custom-icon</icon>
            <component>Path/to/custom/component</component>
            <preview_component>Path/to/preview/custom/component</preview_component>
            <backend_block>Path/to/custom/backend/block</backend_block>
            <backend_template>Path/to/custom/backend/template</backend_template>
            <is_visible>false</is_visible>
            <form>pagebuilder_type2_custom_form</form>
            <group>group2</group>
            <allowed_parents>
                <parent name="type1"/>
            </allowed_parents>
            <appearances>
                <appearance name="default" default="true">
                    <data name="data1">custom_value</data>
                    <data name="data3">value3</data>
                    <data_mapping>
                        <elements>
                            <element name="first_element" path=".">
                                <style_properties>
                                    <property var="style_attributes_change" name="custom_name" converter="Path/to/custom/converter" preview_converter="Path/to/preview/custom/converter" persist="true" virtual="false" />
                                    <property var="style_attributes_add" name="attributes_add" converter="Path/to/custom/converter" preview_converter="Path/to/preview/custom/converter" persist="false" virtual="true" />
                                    <property var="new_style" name="new-style"/>
                                    <complex_property var="complex_style_attributes_change" converter="Path/to/custom/converter" preview_converter="Path/to/preview/custom/converter" virtual="false" reader="Path/to/custom/reader" />
                                    <complex_property var="complex_style_attributes_add" converter="Path/to/custom/converter" preview_converter="Path/to/preview/custom/converter" virtual="true" reader="Path/to/custom/reader" />
                                    <complex_property var="new_complex" reader="Path/to/reader"/>
                                    <static_property name="static_style_attributes_change" value="custom_value" />
                                    <static_property name="new_static" value="new-value"/>
                                </style_properties>
                                <attributes>
                                    <attribute var="attribute_change" name="data-custom" converter="Path/to/custom/converter" preview_converter="Path/to/preview/custom/converter" virtual="false" persist="true"/>
                                    <attribute var="attribute_add" name="attribute_add" converter="Path/to/custom/converter" preview_converter="Path/to/preview/custom/converter" virtual="false" persist="true"/>
                                    <attribute var="new_attribute" name="data-new" converter="Path/to/custom/converter" preview_converter="Path/to/preview/custom/converter" virtual="true" persist="false"/>
                                    <complex_attribute var="complex_style_attributes_change" converter="Path/to/custom/converter" preview_converter="Path/to/preview/custom/converter" virtual="false" reader="Path/to/custom/reader" />
                                    <complex_attribute var="complex_style_attributes_add" converter="Path/to/custom/converter" preview_converter="Path/to/preview/custom/converter" virtual="true" reader="Path/to/custom/reader" />
                                    <complex_attribute var="new_complex" reader="Path/to/reader"/>
                                    <static_attribute name="static_attribute_change" value="custom_value" />
                                    <static_attribute name="new_static" value="new-value"/>
                                </attributes>
                                <tag var="tag" converter="Path/to/custom/converter" />
                                <html var="html" placeholder="custom-text" />
                                <css var="css_classes" converter="Path/to/custom/converter">
                                    <filter>
                                        <class name="new-class"/>
                                    </filter>
                                </css>
                            </element>
                            <element name="third_element" path="//div">
                                <style_properties>
                                    <property var="style_no_converter" name="no_converter"/>
                                </style_properties>
                                <attributes>
                                    <attribute var="name" name="data-role"/>
                                </attributes>
                                <css var="css_classes"/>
                            </element>
                        </elements>
                        <converters>
                            <converter name="converter1" component="Path/to/custom/converter">
                                <config>
                                    <item name="change_value" value="custom_value"/>
                                    <item name="new_value" value="value3"/>
                                </config>
                            </converter>
                            <converter name="converter3" component="Path/to/custom/converter">
                                <config>
                                    <item name="item1" value="value1"/>
                                </config>
                            </converter>
                        </converters>
                    </data_mapping>
                    <preview_template>Path/to/preview/custom/template</preview_template>
                    <render_template>Path/to/render/custom/template</render_template>
                    <readers>
                        <reader name="reader1" component="Path/to/custom/reader1"/>
                        <reader name="reader3" component="Path/to/custom/reader3"/>
                    </readers>
                    <form>Path/to/custom/form</form>
                </appearance>
                <appearance name="appearance4">
                    <data_mapping>
                        <elements>
                            <element name="main" path=".">
                                <style_properties>
                                    <property var="style_converter" name="converter" converter="Path/to/converter"/>
                                    <property var="style_no_converter" name="no_converter"/>
                                </style_properties>
                                <attributes>
                                    <attribute var="name" name="data-role"/>
                                </attributes>
                                <css var="css_classes"/>
                            </element>
                        </elements>
                    </data_mapping>
                    <preview_template>Path/to/preview/template</preview_template>
                    <render_template>Path/to/render/template</render_template>
                    <readers>
                        <reader name="default" component="Path/to/reader"/>
                    </readers>
                    <form>Path/to/custom/form</form>
                </appearance>
            </appearances>
        </type>
    </content_types>
</config>
