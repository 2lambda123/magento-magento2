<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/magento2-functional-testing-framework/src/Magento/FunctionalTestingFramework/Page/etc/SectionObject.xsd">
    <section name="HtmlOnBackend">
        <element name="content" type="button" selector='//div[contains(@class, "pagebuilder-html")][1]/div[1]'/>
    </section>
    <section name="HtmlOnBackendArbitraryHtml">
        <element name="content" type="button" selector="//div[@class='pagebuilder-html'][1]/div[@class='my-div']"/>
    </section>
    <section name="HtmlOnBackendWithImage">
        <element name="content" type="button" selector="//div[@class='pagebuilder-html'][1]/img[not(contains(@src, '{{media'))]"/>
    </section>
    <section name="HtmlOnFrontendWithImage">
        <element name="content" type="button" selector="//div[@data-role='html'][1]/img[not(contains(@src, '{{media'))]"/>
    </section>
    <section name="HtmlOnBackendMediaDirective">
        <element name="content" type="button" selector="//div[@class='pagebuilder-html'][1]/ims[contains(@src, '{{media')]"/>
    </section>
    <section name="HtmlOnBackendNonexistentDataRole">
        <element name="content" type="button" selector="//div[@class='pagebuilder-html'][1]/div[@data-role='row']/div[@data-role='non-existent-content-type']"/>
    </section>
</sections>
