<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/magento2-functional-testing-framework/src/Magento/FunctionalTestingFramework/Page/etc/SectionObject.xsd">
    <section name="RowOnBackend">
        <element name="parallaxSectionName" type="button" selector="//div[@data-index='parallax_background']"/>
        <element name="backgroundSectionName" type="button" selector="//div[@data-index='background']"/>
        <element name="colorInput" type="input" selector="[name='background_color']"/>
        <element name="sizeInput" type="button" selector="[name='background_size']"/>
        <element name="attachmentInput" type="button" selector="[name='background_attachment']"/>
        <element name="repeatInput" type="button" selector="[name='background-repeat']"/>
    </section>
    <section name="RowOnFrontend">
        <element name="backgroundColor" type="button" selector="[data-role='row'][style*='background-color: rgb(204, 204, 204)']"/>
        <element name="backgroundImage" type="button" selector="//*[@data-role='row'][1][contains(@style, 'background-image: url(')]"/>
        <element name="backgroundPosition" type="button" selector="[data-role='row'][style*='background-position: center center']"/>
        <element name="backgroundSize" type="button" selector="[data-role='row'][style*='background-size: cover']"/>
        <element name="backgroundRepeat" type="button" selector="[data-role='row'][style*='background-repeat: repeat']"/>
        <element name="backgroundAttachment" type="button" selector="[data-role='row'][style*='background-attachment: scroll']"/>
        <element name="parallaxClass" type="button" selector="//div[@data-role='row'][@class='pagebuilder-parallax']"/>
        <element name="parallaxSpeed" type="button" selector="//div[@data-role='row'][@class='pagebuilder-parallax'][@data-speed='{{arg1}}']" parameterized="true"/>
    </section>
</config>
