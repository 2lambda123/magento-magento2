<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/magento2-functional-testing-framework/src/Magento/FunctionalTestingFramework/Page/etc/SectionObject.xsd">
    <section name="RowOnBackend">
        <element name="parallaxSectionName" type="button" selector="//div[@data-index='parallax_background']"/>
        <element name="backgroundSectionName" type="button" selector="//div[@data-index='background']"/>
        <element name="colorInput" type="input" selector="[name='background_color']"/>
        <element name="sizeInput" type="button" selector="[name='background_size']"/>
        <element name="attachmentInput" type="button" selector="[name='background_attachment']"/>
        <element name="repeatInput" type="button" selector="[name='background-repeat']"/>
        <element name="enableParallaxSwitch" type="input" selector="//*[@name='enable_parallax']/parent::*/label"/>
        <element name="enableParallaxSwitchValue" type="input" selector="//*[@name='enable_parallax'][contains(@value, '{{arg1}}')]" parameterized="true"/>
        <element name="parallaxSpeed" type="input" selector="//*[@name='parallax_speed']"/>
        <element name="parallaxSpeedToolTip" type="input" selector="//div[@data-index='parallax_speed']//div[contains(@class, 'admin__field-tooltip')]//a"/>
        <element name="parallaxSpeedToolTipContent" type="input" selector="//div[@data-index='parallax_speed']//div[contains(@class, 'admin__field-tooltip-content')]"/>
        <element name="parallaxSpeedNotice" type="input" selector="//div[@data-index='parallax_speed']//div[contains(@class, 'admin__field-note')]//span"/>
    </section>
    <section name="RowAdminPreview">
        <element name="default" type="button" selector="(//div[contains(@class, 'pagebuilder-content-type') and contains(@class, 'pagebuilder-row') and contains(@style, 'border-style: {{arg1}};') and contains(@style, 'border-radius: {{arg2}}px;') and contains(@style, 'margin: {{arg3}}px;') and contains(@style, 'padding: {{arg4}}px;') and contains(@style, 'background-size: {{arg5}};') and contains(@style, 'background-repeat: {{arg6}};') and contains(@style, 'background-attachment: {{arg7}};')])[{{arg8}}]" parameterized="true"/>
        <element name="empty" type="button" selector="(//div[contains(@class, 'pagebuilder-content-type')]//div[contains(@class, 'pagebuilder-empty-container')])"/>
        <element name="row" type="text" selector='(//div[contains(@class, "pagebuilder-content-type") and contains(@class, "pagebuilder-row")])[1]'/>
        <element name="row2" type="text" selector='(//div[contains(@class, "pagebuilder-content-type") and contains(@class, "pagebuilder-row")])[2]'/>
        <element name="row3" type="text" selector='(//div[contains(@class, "pagebuilder-content-type") and contains(@class, "pagebuilder-row")])[3]'/>
        <element name="allRows" type="text" selector='//div[contains(@class, "pagebuilder-content-type") and contains(@class, "pagebuilder-row")]'/>
        <element name="rowOptionsMenu" type="button" selector='(//div[1][contains(@class, "pagebuilder-content-type") and contains(@class, "pagebuilder-row")])[1]/div[@class="pagebuilder-options"]'/>
        <element name="removeRow" type="button" selector='(//div[contains(@class, "pagebuilder-content-type") and contains(@class, "pagebuilder-row")])[1]/div[@class="pagebuilder-options"]/descendant::*[@class="remove-structural"]'/>
        <element name="displayLabel" type="button" selector="(//div[contains(@class, 'pagebuilder-content-type')]//div[contains(@class, 'pagebuilder-display-label')])"/>
        <element name="rowStyle" type="text" selector="(//div[contains(@class, 'pagebuilder-content-type') and contains(@class, 'pagebuilder-row') and contains(@style, '{{arg1}}')])[1]" parameterized="true"/>
        <element name="backgroundColor" type="button" selector="(//div[contains(@class, 'pagebuilder-content-type') and contains(@class, 'pagebuilder-row') and contains(@style, 'background-color: rgb(204, 204, 204)')])[1]"/>
        <element name="backgroundImage" type="button" selector="(//div[contains(@class, 'pagebuilder-content-type') and contains(@class, 'pagebuilder-row') and contains(@style, 'background-image: url(')])[1]"/>
        <element name="backgroundPosition" type="button" selector="(//div[contains(@class, 'pagebuilder-content-type') and contains(@class, 'pagebuilder-row') and contains(@style, 'background-position: left top')])[1]"/>
        <element name="backgroundSize" type="button" selector="(//div[contains(@class, 'pagebuilder-content-type') and contains(@class, 'pagebuilder-row') and contains(@style, 'background-size: cover')])[1]"/>
        <element name="backgroundRepeat" type="button" selector="(//div[contains(@class, 'pagebuilder-content-type') and contains(@class, 'pagebuilder-row') and contains(@style, 'background-repeat: repeat')])[1]"/>
        <element name="backgroundAttachment" type="button" selector="(//div[contains(@class, 'pagebuilder-content-type') and contains(@class, 'pagebuilder-row') and contains(@style, 'background-attachment: fixed')])[1]"/>
    </section>
    <section name="RowOnFrontend">
        <element name="backgroundColor" type="button" selector="[data-role='row'][style*='background-color: rgb(204, 204, 204)']"/>
        <element name="backgroundImage" type="button" selector="//*[@data-role='row'][1][contains(@style, 'background-image: url(')]"/>
        <element name="backgroundPosition" type="button" selector="[data-role='row'][style*='background-position: left top']"/>
        <element name="backgroundSize" type="button" selector="[data-role='row'][style*='background-size: cover']"/>
        <element name="backgroundRepeat" type="button" selector="[data-role='row'][style*='background-repeat: repeat']"/>
        <element name="backgroundAttachment" type="button" selector="[data-role='row'][style*='background-attachment: fixed']"/>
        <element name="parallaxClass" type="button" selector="//div[@data-role='row'][@class='jarallax']"/>
        <element name="parallaxSpeed" type="button" selector="//div[@data-role='row'][@class='jarallax'][@data-parallax-speed='{{arg1}}']" parameterized="true"/>
        <!-- Advanced Section -->
        <element name="textAlign" type="button" selector="[data-role='row'][style*='text-align: center;']"/>
        <element name="border" type="button" selector="[data-role='row'][style*='border: 10px dotted rgb(255, 255, 255);']"/>
        <element name="borderRadius" type="button" selector="[data-role='row'][style*='border-radius: 12px;']"/>
        <element name="marginDefault" type="button" selector="[data-role='row'][style*='margin: 0px 0px 10px;']"/>
        <element name="margin" type="button" selector="[data-role='row'][style*='margin: 5px;']"/>
        <element name="paddingDefault" type="button" selector="[data-role='row'][style*='padding: 10px;']"/>
        <element name="padding" type="button" selector="[data-role='row'][style*='padding: 5px;']"/>
        <element name="class" type="button" selector="[data-role='row'].first-class.second-class.third-class"/>
    </section>
    <section name="PageBuilderRowSection">
        <element name="row" type="text" selector='(//div[contains(@class, "pagebuilder-content-type") and contains(@class, "pagebuilder-row")])[1]'/>
        <element name="row2" type="text" selector='(//div[contains(@class, "pagebuilder-content-type") and contains(@class, "pagebuilder-row")])[2]'/>
        <element name="row3" type="text" selector='(//div[contains(@class, "pagebuilder-content-type") and contains(@class, "pagebuilder-row")])[3]'/>
        <element name="allRows" type="text" selector='//div[contains(@class, "pagebuilder-content-type") and contains(@class, "pagebuilder-row")]'/>
        <element name="rowOptionsMenu" type="button" selector='(//div[1][contains(@class, "pagebuilder-content-type") and contains(@class, "pagebuilder-row")])[1]/div[@class="pagebuilder-options"]'/>
        <element name="removeRow" type="button" selector='(//div[contains(@class, "pagebuilder-content-type") and contains(@class, "pagebuilder-row")])[1]/div[@class="pagebuilder-options"]/descendant::*[@class="remove-structural"]'/>
    </section>
</sections>
