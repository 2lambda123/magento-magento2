    <test name="MapCommonCaseWidthPercentage">
        <annotations>
            <features value="Pagebuilder"/>
            <stories value="Map"/>
            <title value="Map - 75% Width"/>
            <description value="Validates map width of 75% on stage and storefront"/>
            <severity value="CRITICAL"/>
            <testCaseId value="MAGETWO-91231"/>
            <group value="pagebuilder"/>
            <group value="pagebuilder-map"/>
        </annotations>
        <before>
            <actionGroup ref="LoginAsAdmin" stepKey="loginAsAdmin"/>
            <actionGroup ref="EnabledWYSIWYG" stepKey="enableWYSIWYG"/>
            <actionGroup ref="enablePageBuilderSetting" stepKey="enablePageBuilderSetting"/>
            <actionGroup ref="navigateToAPageWithPageBuilder" stepKey="navigateToAPageWithPageBuilder"/>
            <actionGroup ref="switchToPageBuilderStage" stepKey="switchToPageBuilderStage"/>
        </before>
        <after>
            <actionGroup ref="DisabledWYSIWYG" stepKey="disableWYSIWYG"/>
            <actionGroup ref="logout" stepKey="logout"/>
        </after>
        <actionGroup ref="addPageBuilderPageTitle" stepKey="enterPageTitle">
            <argument name="contentBlockType" value="PageBuilderMapContentBlock"/>
        </actionGroup>
        <actionGroup ref="expandPageBuilderPanelGroup" stepKey="expandGroupInteractive">
            <argument name="group" value="PageBuilderMapContentBlock"/>
        </actionGroup>
        <actionGroup ref="dragContentBlockToStage" stepKey="dragTextIntoStage">
            <argument name="contentBlockType" value="PageBuilderMapContentBlock"/>
        </actionGroup>
        <!-- Update Edit Panel -->
        <comment userInput="Update Edit Panel" stepKey="commentEdit"/>
        <actionGroup ref="addMapPin" stepKey="enterMapPositionProperties">
            <argument name="page" value="PageBuilderMapPositionDefaultProperty"/>
        </actionGroup>
        <actionGroup ref="fillSlideOutPanelFieldGeneral" stepKey="enterWidth">
            <argument name="property" value="PageBuilderMapWidthProperty75"/>
        </actionGroup>
        <actionGroup ref="saveEditPanelSettings" stepKey="saveEditPanelSettings"/>
        <!-- Validate Stage -->
        <comment userInput="Validate Stage" stepKey="commentValidateStage"/>
        <!-- Get the pre-computed width of the map container and multiply by percentage -->
        <executeJS function="return Math.round({{MapOnStage.parentContainerWidth}}.clientWidth*.{{PageBuilderMapWidthProperty75.integer}})" stepKey="expectedStageMapWidth1"/>
        <executeJS function="{{MapOnStage.computedWidth}}" stepKey="actualStageMapWidth1"/>
        <assertEquals stepKey="assertStageMapWidth1">
            <expectedResult type="variable">expectedStageMapWidth1</expectedResult>
            <actualResult type="variable">actualStageMapWidth1</actualResult>
        </assertEquals>
        <!-- Validate Edit Panel -->
        <comment userInput="Validate Edit Panel" stepKey="commentValidateEditPanel"/>
        <actionGroup ref="openPageBuilderEditPanel" stepKey="openEditMenuOnStage">
            <argument name="contentBlockType" value="PageBuilderMapContentBlock"/>
        </actionGroup>
        <actionGroup ref="seeInFieldSlideOutProperty" stepKey="validateWidth">
            <argument name="property" value="PageBuilderMapWidthProperty75"/>
        </actionGroup>
        <actionGroup ref="closeEditPanelSettings" stepKey="closeEditPanel"/>
        <actionGroup ref="saveAndContinueEditCmsPage" stepKey="saveAndContinueEditCmsPage"/>
        <actionGroup ref="switchToPageBuilderStage" stepKey="switchToPageBuilderStage"/>
        <!-- Validate Stage After Save -->
        <comment userInput="Validate Stage After Save" stepKey="commentValidateStage2"/>
        <!-- Get the pre-computed width of the map container and multiply by percentage -->
        <executeJS function="return Math.round({{MapOnStage.parentContainerWidth}}.clientWidth*.{{PageBuilderMapWidthProperty75.integer}})" stepKey="expectedStageMapWidth2"/>
        <executeJS function="{{MapOnStage.computedWidth}}" stepKey="actualStageMapWidth2"/>
        <assertEquals stepKey="assertStageMapWidth2">
            <expectedResult type="variable">expectedStageMapWidth2</expectedResult>
            <actualResult type="variable">actualStageMapWidth2</actualResult>
        </assertEquals>
        <!-- Validate Edit Panel After Save -->
        <comment userInput="Validate Edit Panel After Save" stepKey="commentValidateEditPanel2"/>
        <actionGroup ref="openPageBuilderEditPanel" stepKey="openEditMenuOnStage2">
            <argument name="contentBlockType" value="PageBuilderMapContentBlock"/>
        </actionGroup>
        <actionGroup ref="seeInFieldSlideOutProperty" stepKey="validateWidth2">
            <argument name="property" value="PageBuilderMapWidthProperty75"/>
        </actionGroup>
        <!-- Validate Storefront -->
        <comment userInput="Validate Storefront" stepKey="commentValidateStorefront"/>
        <actionGroup ref="navigateToStoreFront" stepKey="navigateToStoreFront">
            <argument name="contentBlockType" value="PageBuilderMapContentBlock"/>
        </actionGroup>
        <!-- Get the computed width of the parent row container and multiply by percentage -->
        <executeJS function="return Math.round({{RowOnStorefront.computedWidth}}*.{{PageBuilderMapWidthProperty75.integer}})" stepKey="expectedStorefrontMapWidth"/>
        <executeJS function="{{MapOnStorefront.computedWidth}}" stepKey="actualStorefrontMapWidth"/>
        <assertEquals stepKey="assertPageBuilderStorefrontMapWidth">
            <expectedResult type="variable">expectedStorefrontMapWidth</expectedResult>
            <actualResult type="variable">actualStorefrontMapWidth</actualResult>
        </assertEquals>
    </test>
