        <comment userInput="Add a heading to the stage" stepKey="commentAddHeading"/>
        <actionGroup ref="dragContentBlockToStage" stepKey="dragThirdHeaderIntoStage">
            <argument name="contentBlockType" value="PageBuilderHeadingContentBlock"/>
