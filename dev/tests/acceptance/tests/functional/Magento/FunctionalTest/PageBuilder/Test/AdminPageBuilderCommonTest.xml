            <features value="Pagebuilder"/>
            <stories value="MAGETWO-86799: Deleting Content block/ container from the stage"/>
            <title value="No confirmation when removing an empty block"/>
            <description value="A user should not be prompt when removing a block in its default state with no children"/>
            <severity value="CRITICAL"/>
            <testCaseId value="MAGETWO-89052"/>
            <group value="pagebuilder"/>
            <group value="pagebuilder-common"/>
        </annotations>
        <before>
            <actionGroup ref="LoginAsAdmin" stepKey="loginAsAdmin"/>
            <actionGroup ref="navigateToAPageWithPageBuilder" stepKey="navigateToAPageWithPageBuilder"/>
            <actionGroup ref="switchToPageBuilderStage" stepKey="switchToPageBuilderStage"/>
        </before>
        <after>
            <actionGroup ref="logout" stepKey="logout"/>
        </after>
        <!-- Add a single header into the first row -->
        <actionGroup ref="dragContentBlockToStage" stepKey="dragHeaderIntoStage">
            <argument name="contentBlockType" value="PageBuilderHeadingContentBlock"/>
        </actionGroup>
        <!-- Add an additional row to attempt removal of a row -->
        <actionGroup ref="dragContentBlockToStageByIndex" stepKey="dragRowIntoStage">
            <argument name="contentBlockType" value="PageBuilderRowContentBlock"/>
            <argument name="contentBlockNumber" value="2"/>
        </actionGroup>

        <!-- Attempt to remove both content types validating the confirmation window is never displayed -->
        <actionGroup ref="removeEmptyContentBlockFromStage" stepKey="removeHeader">
            <argument name="contentBlockType" value="PageBuilderHeadingContentBlock"/>
        </actionGroup>
        <dontSee selector="{{PageBuilderActionsSection.modal}}" stepKey="dontSeeModalHeader"/>
        <dontSee selector="{{PageBuilderActionsSection.modalOk}}" stepKey="dontSeeModalOkHeader" />
        <actionGroup ref="removeEmptyContentBlockFromStage" stepKey="removeRow">
            <argument name="contentBlockType" value="PageBuilderRowContentBlock"/>
        </actionGroup>
        <dontSee selector="{{PageBuilderActionsSection.modal}}" stepKey="dontSeeModalRow"/>
        <dontSee selector="{{PageBuilderActionsSection.modalOk}}" stepKey="dontSeeModalOkRow" />
    </test>
    <test name="ConfirmationOnContainerWithChildrenRemoval">
        <annotations>
            <features value="Pagebuilder"/>
            <stories value="MAGETWO-86799: Deleting Content block/ container from the stage"/>
            <title value="Removal confirmation on container block with children"/>
            <description value="The user should be prompted when removing a block which has children"/>
            <severity value="CRITICAL"/>
            <testCaseId value="MAGETWO-89053"/>
            <group value="pagebuilder"/>
            <group value="pagebuilder-common"/>
        </annotations>
        <before>
            <actionGroup ref="LoginAsAdmin" stepKey="loginAsAdmin"/>
            <actionGroup ref="navigateToAPageWithPageBuilder" stepKey="navigateToAPageWithPageBuilder"/>
            <actionGroup ref="switchToPageBuilderStage" stepKey="switchToPageBuilderStage"/>
        </before>
        <after>
            <actionGroup ref="logout" stepKey="logout"/>
        </after>
        <!-- Add a single header into the first row -->
        <actionGroup ref="dragContentBlockToStage" stepKey="dragHeaderIntoStage">
            <argument name="contentBlockType" value="PageBuilderHeadingContentBlock"/>
        </actionGroup>
        <!-- Add an additional row so we're able to delete the first one -->
