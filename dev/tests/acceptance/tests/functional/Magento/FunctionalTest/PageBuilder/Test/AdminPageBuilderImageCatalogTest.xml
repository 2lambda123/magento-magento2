        <!--See Uploaded Image On Storage-->
        <!--<see userInput="{{ImageUpload.file}}" stepKey="seeUploadedImageOnStorage"/>-->

        <actionGroup ref="CreateImageFolder" stepKey="createImageFolder">
            <argument name="ImageFolder" value="ImageFolder"/>
        </actionGroup>
        <actionGroup ref="attachImage" stepKey="SelectImageFromMediaStorare">
            <argument name="Image" value="ImageUpload1"/>
        </actionGroup>
        <actionGroup ref="saveImage" stepKey="saveImage"/>
        <seeElement selector="{{ImageOnPreview.imageName(ImageUpload1.file)}}" stepKey="seeImgeNameOnPreview3"/>
        <seeElement selector="{{ImageOnPreview.imageSource(ImageFolder.name,ImageUpload1.file)}}" stepKey="seeMainImageSource3"/>
        <seeElement selector="{{ImageOnPreview.trashBinIcon}}" stepKey="seeTrashBinBtn"/>
        <fillField selector="{{AdminStagingSlideOutSection.updateName}}" userInput="{{_staging.update_name}}" stepKey="fillUpdateName" />
        <fillField selector="{{AdminStagingSlideOutSection.startDate}}" userInput="{{_staging.start_date}}" stepKey="fillStartDate" />
        <click selector="{{AdminStagingSlideOutSection.save}}" stepKey="clickSaveSchedule" />
        <waitForElementNotVisible selector="{{AdminStagingSlideOutSection.title}}" stepKey="waitForSlideoutClose" />
        <waitForLoadingMaskToDisappear stepKey="waitForLoading3"/>
        <click selector="{{AdminStagingSlideOutSection.preview}}" stepKey="clickPreviewToSeeStorefront"/>
        <waitForPageLoad stepKey="waitForPageLoad3" />
        <waitForElementVisible selector="{{ImageOnPreview.imageSource(ImageFolder.name,ImageUpload1.file)}}"  stepKey="waitForImageDisplay"/>
        <switchToIFrame  userInput="iframe" stepKey="switchToIframe" />
        <seeElement selector="{{ImageOnPreview.imageSource(ImageFolder.name,ImageUpload1.file)}}" stepKey="seeMainImageSourceOnStorefront"/>
    </test>

</tests>
