<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/magento2-functional-testing-framework/src/Magento/FunctionalTestingFramework/Page/etc/SectionObject.xsd">
    <section name="BannerOnFrontend">
        <element name="backgroundImageSource" type="button" selector="//div[contains(@style, '{{arg1}}')]" parameterized="true"/>
        <element name="messageText" type="text" selector="//div/p[text()='{{arg1}}']" parameterized="true"/>
        <element name="buttonText" type="text" selector="//button[text()='{{arg1}}']" parameterized="true"/>
        <element name="linkUrl" type="button" selector="[href*='{{arg1}}']" parameterized="true"/>
    </section>
    <section name="BannerOnBackend">
        <element name="backgroundImageSource" type="button" selector="//div[contains(@style, '{{arg1}}')]" parameterized="true"/>
        <element name="messageText" type="text" selector="//div/p[text()='{{arg1}}']" parameterized="true"/>
        <element name="buttonText" type="text" selector="//button[text()='{{arg1}}']" parameterized="true"/>
        <element name="linkUrl" type="button" selector="[href*='{{arg1}}']" parameterized="true"/>
        <element name="editButtonLuma" type="button" selector="//button[contains(@class, 'luma-button-primary')]" />
        <element name="requiredField" type="text" selector="//label[contains(@class, 'admin__field-error')]" />
        <element name="openInNewTab" type="button" selector="[data-role='banner'] a[target='_blank']"/>
    </section>
</sections>
