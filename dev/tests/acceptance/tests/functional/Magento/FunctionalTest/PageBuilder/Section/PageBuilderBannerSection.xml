<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/magento2-functional-testing-framework/src/Magento/FunctionalTestingFramework/Page/etc/SectionObject.xsd">
    <section name="BannerOnFrontend">
        <element name="backgroundImageSource" type="button" selector="//div[contains(@style, '{{arg1}}')]" parameterized="true"/>
        <element name="messageText" type="text" selector="//div/p[text()='{{arg1}}']" parameterized="true"/>
        <element name="buttonText" type="text" selector="//button[text()='{{arg1}}']" parameterized="true"/>
        <element name="linkUrl" type="button" selector="[href*='{{arg1}}']" parameterized="true"/>
        <element name="openInNewTab" type="button" selector="//a[contains(@target, '_blank')]"/>
        <element name="banner" type="button" selector="div[data-role='banner']" />
        <element name="poster" type="button" selector="div[data-role='banner'] div[style*='padding: 40px']"/>
        <element name="collageLeft" type="button" selector="div[data-role='banner'] .pagebuilder-mobile-hidden[style*= '40px calc(50% + 40px) 40px 40px'][style*= 'magento']"/>
        <element name="collageCentered" type="button" selector="div[data-role='banner'] .pagebuilder-mobile-hidden[style*= '40px calc(25% + 40px)'][style*= 'magento']"/>
        <element name="collageRight" type="button" selector="div[data-role='banner'] .pagebuilder-mobile-hidden[style*= '40px 40px 40px calc(50% + 40px)'][style*= 'magento']"/>
        <element name="collageMobileWithoutMobileImage" type="button" selector="div[data-role='banner'] .pagebuilder-mobile-only[style*= 'padding: 40px;'][style*= 'magento']"/>
        <element name="collageMobileWithMobileImage" type="button" selector="div[data-role='banner'] .pagebuilder-mobile-only[style*= 'padding: 40px;'][style*= 'm-logo']"/>
    </section>
    <section name="BannerOnBackend">
        <element name="backgroundImageSource" type="button" selector="//div[contains(@style, '{{arg1}}')]" parameterized="true"/>
        <element name="messageText" type="text" selector="//div/p[text()='{{arg1}}']" parameterized="true"/>
        <element name="buttonText" type="text" selector="//button[text()='{{arg1}}']" parameterized="true"/>
        <element name="linkUrl" type="button" selector="[href*='{{arg1}}']" parameterized="true"/>
        <element name="editButton" type="button" selector="//button[contains(@class, 'pagebuilder-button-primary')]" />
        <element name="requiredField" type="text" selector="//label[contains(@class, 'admin__field-error')]" />
        <element name="appearanceSelect" type="button" selector="[name='appearance']"/>
        <element name="paddingTopInput" type="button" selector="[name='paddingTop']"/>
        <element name="paddingLeftInput" type="button" selector="[name='paddingLeft']"/>
        <element name="paddingBottomInput" type="button" selector="[name='paddingBottom']"/>
        <element name="paddingRightInput" type="button" selector="[name='paddingRight']"/>
        <element name="collageLeft" type="button" selector="div[style*= '40px calc(50% + 40px) 40px 40px'][style*= 'magento']"/>
        <element name="collageCentered" type="button" selector="div[style*= '40px calc(25% + 40px)'][style*= 'magento']"/>
        <element name="collageRight" type="button" selector="div[style*= '40px 40px 40px calc(50% + 40px)'][style*= 'magento']"/>
    </section>
</sections>
