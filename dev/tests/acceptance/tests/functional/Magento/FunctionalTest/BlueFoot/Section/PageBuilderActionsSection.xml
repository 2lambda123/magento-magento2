<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/magento2-functional-testing-framework/src/Magento/FunctionalTestingFramework/Page/etc/SectionObject.xsd">
    <section name="PageBuilderActionsSection">
        <element name="draggableContentBlockInPanel" type="button" selector='//*[text()="{{arg1}}"]/ancestor::*[contains(@class, "ui-draggable")]' parameterized="true"/>
        <element name="dropAreaInStage" type="button" selector="//div[contains(@class, 'stage-container')]/div[contains(@class, 'bluefoot-row-wrapper')][1]/div[contains(@class, 'bluefoot-row')]/div[contains(@class, 'row-container')]"/>
        <element name="contentBlockInStage" type="button" selector='//div[contains(@class, "pagebuilder-{{arg1}}")][1]' parameterized="true"/>
        <element name="contentBlockPreviewInStage" type="button" selector=".stage-container div.pagebuilder-{{arg1}}.bluefoot-entity-preview" parameterized="true"/>
        <element name="contentBlockOptionsMenu" type="button" selector='//div[contains(@class, "pagebuilder-{{arg1}}")][1]/div[@class="bluefoot-options"]' parameterized="true"/>
        <element name="contentBlockEdit" type="button" selector='.pagebuilder-{{arg1}} a.edit-block[title="Edit"]' parameterized="true"/>
        <element name="editForm" type="text" selector='//div[contains(@class, "bluefoot_modal_form_bluefoot_modal_form_modal")]'/>
        <element name="editFormTitle" type="text" selector=".modal-title[data-role='title']"/>
    </section>
</config>
