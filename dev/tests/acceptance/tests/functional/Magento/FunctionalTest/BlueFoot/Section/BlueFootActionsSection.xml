<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/magento2-functional-testing-framework/src/Magento/FunctionalTestingFramework/Page/etc/SectionObject.xsd">
    <section name="BlueFootActionsSection">
        <element name="openBlueFoot" type="button" selector=".init-gene-bluefoot" timeout="30"/>
        <element name="openFullScreen" type="button" selector='//*[@id="container"]/div/div[2]/div[2]/div[2]/fieldset/div[3]/div[1]/i' timeout="30"/>
        <element name="stageWrapper" type="button" selector='//*[@id="container"]/div/div[2]/div[2]/div[2]/fieldset/div[3]' timeout="30"/>
        <element name="searchField" type="input" selector='//*[@id="bluefoot-panel"]/div[1]/a'/>
        <element name="clearSearch" type="button" selector='//*[@id="bluefoot-panel"]/div[1]/a'/>
        <element name="firstSection" type="button" selector='//*[@id="bluefoot-panel-groups"]/li[1]' timeout="30"/>

        <element name="generalGroup" type="button" selector='//*[@id="group-general"]'/>
        <element name="generalGroupBlock" type="button" selector='//*[@id="group-general"]/div/div/ul/li/a/span[2]'/>
        <element name="mediaGroup" type="button" selector='//*[@id="group-media"]'/>
        <element name="mediaGroupBlock" type="button" selector='//*[@id="group-media"]/div/div/ul/li/a/span[2]'/>
        <element name="interactiveGroup" type="button" selector='//*[@id="group-interactive"]'/>
        <element name="interactiveGroupBlock" type="button" selector='//*[@id="group-interactive"]/div/div/ul/li/a/span[2]'/>
        <element name="magentoGroup" type="button" selector='//*[@id="group-magento"]'/>
        <element name="magentoGroupBlock" type="button" selector='//*[@id="group-magento"]/div/div/ul/li/a/span[2]'/>
        <element name="otherGroup" type="button" selector='//*[@id="group-other"]'/>
        <element name="otherGroupBlock" type="button" selector='//*[@id="group-other"]/div/div/ul/li/a/span[2]'/>

        <element name="searchPanel" type="input" selector='//*[@id="search-blocks-input"]' timeout="30"/>
        <element name="searchResults" type="text" selector='//*[@id="search-results"]' timeout="30"/>
        <element name="nothingFound" type="text" selector='//*[@id="bluefoot-panel"]/div[2]/div' timeout="30"/>
        <element name="modal" type="text" selector='//aside[contains(@class, "modal-popup")]'/>
        <element name="modalOk" type="button" selector='//button[@class="action-primary action-accept"]'/>
        <element name="unableToRemoveTitle" type="text" selector='//aside[contains(@class, "modal-popup")]/div[@class="modal-inner-wrap"]/header/h1[contains(text(), "Unable to Remove")]'/>
        <element name="editForm" type="text" selector='//div[contains(@class, "bluefoot_modal_form_bluefoot_modal_form_modal")]'/>
        <element name="editFormCancel" type="button" selector='//aside[contains(@class, "bluefoot_modal_form_bluefoot_modal_form_modal")]/div[@class="modal-inner-wrap"]/header/div[@class="page-main-actions"]/div/button[@data-form-role="close"]'/>
        <element name="editFormSave" type="button" selector='//aside[contains(@class, "bluefoot_modal_form_bluefoot_modal_form_modal")]/div[@class="modal-inner-wrap"]/header/div[@class="page-main-actions"]/div/button[@data-form-role="save"]'/>
    </section>
    <section name="CmsPageSection">
        <element name="cmsPageSaveButton" type="button" selector="//div[contains(@class, 'page-actions-buttons')][1]/button[@id='save']"/>
        <element name="pageTitle" type="input" selector="//*[@name='title']"/>
    </section>
    <section name="CmsPageGrid">
        <element name="cmsPageSearchInput" type="input" selector="//*[@id='fulltext']"/>
        <element name="searchButton" type="button" selector="//*[@id='fulltext']/parent::*/button"/>
        <element name="firstItemSelectButton" type="button" selector=".data-grid .action-select-wrap button.action-select"/>
        <element name="firstItemEditButton" type="button" selector=".data-grid .action-select-wrap .action-menu-item[data-action~='item-edit']"/>
    </section>
    <section name="BlueFootRowSection">
        <element name="row" type="text" selector='(//div[@class="bluefoot-structure bluefoot-row"])[1]'/>
        <element name="allRows" type="text" selector='//div[@class="bluefoot-structure bluefoot-row"]'/>
        <element name="rowOptionsMenu" type="button" selector='(//div[1][@class="bluefoot-structure bluefoot-row"])[1]/div[@class="bluefoot-options"]'/>
        <element name="removeRow" type="button" selector='(//div[@class="bluefoot-structure bluefoot-row"])[1]/div[@class="bluefoot-options"]/descendant::*[@class="remove-structural"]'/>
    </section>
    <section name="BlueFootColumnSection">
        <element name="column" type="text" selector="(//div[@class='bluefoot-structure bluefoot-column'])[1]"/>
        <element name="allColumns" type="text" selector='//div[@class="bluefoot-structure bluefoot-column"]'/>
        <element name="addRow" type="button" selector='//*[@class="bluefoot-stage"]/div[3]/button'/>
        <element name="draggableColumnInPanel" type="button" selector='//*[text()="Column"]/ancestor::*[contains(@class, "ui-draggable")]'/>
        <element name="dropAreaInDefaultStage" type="button" selector="//div[contains(@class, 'stage-container')]/div[contains(@class, 'bluefoot-row-wrapper')][1]/div[contains(@class, 'bluefoot-row')]/div[contains(@class, 'row-container')]"/>
        <element name="columnInStage" type="button" selector='//div[contains(@class, "bluefoot-column")][1]'/>
        <element name="columnInStage2" type="button" selector='(//div[@class="bluefoot-structure bluefoot-column"])[2]'/>
        <element name="columnInStage2Children" type="text" selector='(//div[@class="bluefoot-structure bluefoot-column"])[2]/div[contains(@class, "column-container")]/div'/>
        <element name="columnInStage2DropArea" type="text" selector='(//div[@class="bluefoot-structure bluefoot-column"])[2]/div[contains(@class, "column-container")]'/>
        <element name="columnOptionsMenu" type="button" selector='//div[contains(@class, "bluefoot-column")][1]/div[@class="bluefoot-options"]'/>
        <element name="columnOptionsMenu2" type="button" selector='//div[contains(@class, "bluefoot-column")][2]/div[@class="bluefoot-options"]'/>
        <element name="editColumn" type="button" selector='(//div[@class="bluefoot-structure bluefoot-column"])[1]/div[@class="bluefoot-options"]/descendant::*[@class="edit-block"]'/>
        <element name="editColumn2" type="button" selector='(//div[@class="bluefoot-structure bluefoot-column"])[2]/div[@class="bluefoot-options"]/descendant::*[@class="edit-block"]'/>
        <element name="dragColumn" type="button" selector='(//div[@class="bluefoot-structure bluefoot-column"])[1]/div[@class="bluefoot-options"]/descendant::*[@class="move-structural"]'/>
        <element name="removeColumn" type="button" selector='(//div[contains(@class, "bluefoot-column")])[1]/div[@class="bluefoot-options"]/descendant::*[@class="remove-structural"]'/>
        <element name="panelFieldLabel" type="text" selector='//div[@data-index="{{arg1}}"]/descendant::div[@data-index="{{arg2}}"]/label | //div[@data-index="{{arg3}}"]/descendant::*[@class="admin__field-label"]/span[text()="{{arg4}}"]' parameterized="true" />
        <element name="backgroundRepeatSwitch" type="input" selector="//*[@name='background_repeat']/parent::*/label"/>
        <element name="panelFieldControl" type="input" selector='//div[@data-index="{{arg1}}"]/descendant::*[@name="{{arg2}}"]' parameterized="true"/>
        <element name="panelFieldRequired" type="input" selector='//div[@data-index="{{arg1}}"]/descendant::div[@data-index="{{arg2}}" and contains(@class, "_required")]' parameterized="true"/>
        <element name="columnSaveButton" type="button" selector="//header[contains(@class, 'modal-header')]/div[1]/div[1]/button[@data-form-role='save']"/>
    </section>
    <section name="TwoColumnsOnFrontend">
        <element name="column1Height" type="button" selector="//*[@data-role='column'][1][contains(@style, 'min-height: 100px;')]"/>
        <element name="column1BackgroundColor" type="button" selector="//*[@data-role='column'][1][contains(@style, 'background-color: rgb(204, 204, 204);')]"/>
        <element name="column1BackgroundSize" type="button" selector="//*[@data-role='column'][1][contains(@style, 'background-size: cover;')]"/>
        <element name="column1BackgroundRepeat" type="button" selector="//*[@data-role='column'][1][contains(@style, 'background-repeat: repeat;')]"/>
        <element name="column1BackgroundAttachment" type="button" selector="//*[@data-role='column'][1][contains(@style, 'background-attachment: scroll;')]"/>

        <element name="column2Height" type="button" selector="//*[@data-role='column'][2][contains(@style, 'min-height: 100px;')]"/>
        <element name="column2BackgroundSize" type="button" selector="//*[@data-role='column'][2][contains(@style, 'background-size: auto;')]"/>
        <element name="column2BackgroundRepeat" type="button" selector="//*[@data-role='column'][2][contains(@style, 'background-repeat: repeat;')]"/>
        <element name="column2BackgroundAttachment" type="button" selector="//*[@data-role='column'][2][contains(@style, 'background-attachment: fixed;')]"/>
    </section>
</config>
