<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/magento2-functional-testing-framework/src/Magento/FunctionalTestingFramework/Page/etc/SectionObject.xsd">
    <section name="BlueFootActionsSection">
        <element name="openBlueFoot" type="button" selector=".init-gene-bluefoot" timeout="30"/>
        <element name="openFullScreen" type="button" selector='//*[@id="container"]/div/div[2]/div[2]/div[2]/fieldset/div[3]/div[1]/i' timeout="30"/>
        <element name="stageWrapper" type="button" selector='//*[@id="container"]/div/div[2]/div[2]/div[2]/fieldset/div[3]' timeout="30"/>
        <element name="searchField" type="input" selector='//*[@id="bluefoot-panel"]/div[1]/a'/>
        <element name="clearSearch" type="button" selector='//*[@id="bluefoot-panel"]/div[1]/a'/>
        <element name="firstSection" type="button" selector='//*[@id="bluefoot-panel-groups"]/li[1]' timeout="30"/>
        <element name="generalGroup" type="button" selector='//*[@id="group-general"]'/>
        <element name="generalGroupButtons" type="button" selector='//*[@id="block-buttons"]/a/span[2]'/>
        <element name="generalGroupHeading" type="button" selector='//*[@id="block-heading"]/a/span[2]'/>
        <element name="generalGroupHtml" type="button" selector='//*[@id="block-html"]/a/span[2]'/>
        <element name="generalGroupTextarea" type="button" selector='//*[@id="block-textarea"]/a/span[2]'/>
        <element name="mediaGroup" type="button" selector='//*[@id="group-media"]'/>
        <element name="mediaGroupImage" type="button" selector='//*[@id="block-image"]/a/span[2]'/>
        <element name="mediaGroupDriver" type="button" selector='//*[@id="block-driver"]/a/span[2]'/>
        <element name="mediaGroupVideo" type="button" selector='//*[@id="block-video"]/a/span[2]'/>
        <element name="mediaGroupSlider" type="button" selector='//*[@id="block-slider"]/a/span[2]'/>
        <element name="mediaGroupAdvancedSlider" type="button" selector='//*[@id="block-advanced_slider"]/a/span[2]'/>
        <element name="commerceGroup" type="button" selector='//*[@id="group-commerce"]'/>
        <element name="commerceGroupProduct" type="button" selector='//*[@id="block-product"]/a/span[2]'/>
        <element name="commerceGroupProductList" type="button" selector='//*[@id="block-product_list"]/a/span[2]'/>
        <element name="magentoGroup" type="button" selector='//*[@id="group-magento"]'/>
        <element name="magentoGroupAccordion" type="button" selector='//*[@id="block-accordion"]/a/span[2]'/>
        <element name="magentoGroupTabs" type="button" selector='//*[@id="block-tabs"]/a/span[2]'/>
        <element name="magentoGroupStaticBlock" type="button" selector='//*[@id="block-static_block"]/a/span[2]'/>
        <element name="magentoGroupSearch" type="button" selector='//*[@id="block-search"]/a/span[2]'/>
        <element name="magentoGroupNewsletter" type="button" selector='//*[@id="block-newsletter"]/a/span[2]'/>
        <element name="magentoGroupMap" type="button" selector='//*[@id="block-map"]/a/span[2]'/>
        <element name="magentoGroupCode" type="button" selector='//*[@id="block-code"]/a/span[2]'/>
        <element name="structuralGroup" type="button" selector='//*[@id="group-structural"]'/>
        <element name="structuralGroupAnchor" type="button" selector='//*[@id="block-anchor"]/a/span[2]'/>
        <element name="structuralGroupHorizontalRule" type="button" selector='//*[@id="block-hr"]/a/span[2]'/>
        <element name="searchPanel" type="input" selector='//*[@id="search-blocks-input"]' timeout="30"/>
        <element name="searchResults" type="text" selector='//*[@id="search-results"]' timeout="30"/>
        <element name="nothingFound" type="text" selector='//*[@id="bluefoot-panel"]/div[2]/div' timeout="30"/>
    </section>
    <section name="BlueFootColumnSection">
        <element name="addRow" type="button" selector='//*[@class="bluefoot-stage"]/div[3]/button'/>
        <element name="draggableColumnInPanel" type="button" selector='//*[text()="Column"]/ancestor::*[contains(@class, "ui-draggable")]'/>
        <element name="dropAreaInDefaultStage" type="button" selector="//div[contains(@class, 'stage-container')]/div[contains(@class, 'bluefoot-row-wrapper')]/div[contains(@class, 'bluefoot-row')]/div[contains(@class, 'row-container')]"/>
        <element name="columnInStage" type="button" selector='//div[contains(@class, "bluefoot-column")][1]'/>
        <element name="columnOptionsMenu" type="button" selector='//div[contains(@class, "bluefoot-column")][1]/div[@class="bluefoot-options"]'/>
        <element name="editColumn" type="button" selector='//div[contains(@class, "bluefoot-column")][1]/div[@class="bluefoot-options"]/descendant::*[@class="edit-block"]'/>

        <element name="minHeightLabel" type="text" selector='//div[@data-index="min_height"]/label'/>
        <element name="backgroundColorLabel" type="text" selector='//div[@data-index="background"]/descendant::div[@data-index="background_color"]/label'/>
        <element name="backgroundImageLabel" type="text" selector='//div[@data-index="background"]/descendant::*[@class="admin__field-label"]/span[text()="Background Image"]'/>
        <element name="backgroundPositionLabel" type="text" selector='//div[@data-index="background"]/descendant::div[@data-index="background_position"]/label'/>
        <element name="backgroundSizeLabel" type="text" selector='//div[@data-index="background"]/descendant::div[@data-index="background_size"]/label'/>
        <element name="backgroundRepeatLabel" type="text" selector='//div[@data-index="background"]/descendant::div[@data-index="background_repeat"]/label'/>
        <element name="backgroundAttachmentLabel" type="text" selector='//div[@data-index="background"]/descendant::div[@data-index="background_attachment"]/label'/>

        <element name="minHeightControl" type="input" selector='//div[@data-index="appearance"]/descendant::input[@name="min_height"]'/>
        <element name="backgroundColorControl" type="input" selector='//div[@data-index="background"]/descendant::input[@name="background_color"]'/>
        <element name="backgroundImageControl" type="input" selector='//div[@data-index="background"]/descendant::input[@name="background_image"]'/>
        <element name="backgroundPositionControl" type="select" selector='//div[@data-index="background"]/descendant::select[@name="background_position"]'/>
        <element name="backgroundSizeControl" type="select" selector='//div[@data-index="background"]/descendant::select[@name="background_size"]'/>
        <element name="backgroundRepeatControl" type="input" selector='//div[@data-index="background"]/descendant::input[@name="background_repeat"]'/>
        <element name="backgroundAttachmentControl" type="input" selector='//div[@data-index="background"]/descendant::select[@name="background_attachment"]'/>

        <element name="minHeightField" type="input" selector='//div[@data-index="appearance"]/descendant::div[@data-index="min_height" and contains(@class, "_required")]'/>
        <element name="backgroundPositionField" type="select" selector='//div[@data-index="background"]/descendant::div[@data-index="background_position" and contains(@class, "_required")]'/>
        <element name="backgroundSizeField" type="select" selector='//div[@data-index="background"]/descendant::div[@data-index="background_size" and contains(@class, "_required")]'/>
        <element name="backgroundRepeatField" type="input" selector='//div[@data-index="background"]/descendant::div[@data-index="background_repeat" and contains(@class, "_required")]'/>
        <element name="backgroundAttachmentField" type="select" selector='//div[@data-index="background"]/descendant::div[@data-index="background_attachment" and contains(@class, "_required")]'/>
    </section>
</config>
