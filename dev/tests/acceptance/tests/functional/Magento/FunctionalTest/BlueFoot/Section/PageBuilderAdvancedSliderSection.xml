<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/magento2-functional-testing-framework/src/Magento/FunctionalTestingFramework/Page/etc/SectionObject.xsd">
    <section name="AdvancedSliderOnFrontend">
        <element name="advancedSliderDisplay" type="button" selector="div[data-role='advanced-slider']"/>
        <element name="Autoplay" type="button" selector="div[data-role='advanced-slider'][data-autoplay='0']"/>
        <element name="AutoplaySpeed" type="button" selector="div[data-role='advanced-slider'][data-autoplay-speed='{{arg1}}']" parameterized="true"/>
        <element name="Fade" type="button" selector="div[data-role='advanced-slider'][data-fade='{{arg1}}']" parameterized="true"/>
        <element name="IsInfinite" type="button" selector="div[data-role='advanced-slider'][data-is-infinite='{{arg1}}']" parameterized="true"/>
        <element name="ShowArrows" type="button" selector="div[data-role='advanced-slider'][data-show-arrows='{{arg1}}']" parameterized="true"/>
        <element name="ShowDots" type="button" selector="div[data-role='advanced-slider'][data-show-dots='0']"/>
        <element name="nextSlide" type="button" selector="[data-role='advanced-slider'] .slick-next"/>
    </section>
    <section name="AdvancedSliderInAdmin">
        <element name="addNewSlide" type="button" selector="//div[contains(@class, 'pagebuilder-advanced-slider')][1]/button"/>
    </section>
    <section name="SlideOnFrontend">
        <element name="slide1" type="button" selector="[data-role='slide']"/>
        <element name="slideTitle1" type="text" selector="[data-role='slide']:nth-of-type(1) .pagebuilder-content h3"/>
        <element name="slideContent1" type="text" selector="[data-role='slide']:nth-of-type(1) .pagebuilder-content div.slider-content"/>
        <element name="slideLinkText1" type="text" selector="[data-role='slide']:nth-of-type(1) .pagebuilder-content a span span"/>
        <element name="slideLinkURL1" type="text" selector="[data-role='slide']:nth-of-type(1) .pagebuilder-content a[href*='{{arg1}}']" parameterized="true"/>
        <element name="slideHasOverlay1" type="text" selector="[data-role='slide']:nth-of-type(1) .pagebuilder-content.has-overlay-background"/>
        <element name="slide2" type="button" selector="[data-role='slide']"/>
        <element name="slideTitle2" type="text" selector="[data-role='slide']:nth-of-type(2) .pagebuilder-content h3"/>
        <element name="slideTitle2" type="text" selector="[data-role='slide']:nth-of-type(2) .pagebuilder-content h3"/>
        <element name="slideContent2" type="text" selector="[data-role='slide']:nth-of-type(2) .pagebuilder-content div.slider-content"/>
        <element name="slideLinkText2" type="text" selector="[data-role='slide']:nth-of-type(2) .pagebuilder-content a span span"/>
        <element name="slideLinkURL2" type="text" selector="[data-role='slide']:nth-of-type(2) .pagebuilder-content a[href*='{{arg1}}']" parameterized="true"/>
        <element name="slideBackgroundImage" type="text" selector="[data-role='slide']:nth-of-type({{arg1}})[style*='{{arg2}}'][style*='{{arg3}}']" parameterized="true"/>
    </section>
</config>
