<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="content_types.xsd">
    <groups>
        <group name="general" translate="label" sortOrder="1">
            <label>General</label>
        </group>
        <group name="media" translate="label" sortOrder="10">
            <label>Media</label>
        </group>
        <group name="interactive" translate="label" sortOrder="20">
            <label>Interactive</label>
        </group>
        <group name="magento" translate="label" sortOrder="30">
            <label>Magento</label>
        </group>
        <group name="other" translate="label" sortOrder="40">
            <label>Other</label>
        </group>
