<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">bluefoot_template_create.bluefoot_template_create_data_source</item>
        </item>
        <item name="config" xsi:type="array">
            <item name="toolbarContainer" xsi:type="string">${ $.parentName }</item>
            <item name="externalProvider" xsi:type="string">${ $.ns }.bluefoot_template_create</item>
            <item name="formSubmitType" xsi:type="string">ajax</item>
            <item name="autoRender" xsi:type="boolean">false</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>

    <settings>
        <deps>
            <dep>bluefoot_template_create.bluefoot_template_create_data_source</dep>
        </deps>
        <dataScope>data</dataScope>
        <namespace>bluefoot_template_create</namespace>
        <buttons>
            <button name="save" class="Gene\BlueFoot\Block\Adminhtml\Stage\Template\Button\CloseButton"/>
            <button name="close" class="Gene\BlueFoot\Block\Adminhtml\Stage\Template\Button\SaveButton"/>
        </buttons>
    </settings>

    <dataSource name="bluefoot_template_create_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="bluefoot/stage/template_save"/>
        </settings>
        <dataProvider name="bluefoot_template_create_data_source" class="Gene\BlueFoot\Ui\DataProvider\Template\DataProvider">
            <settings>
                <requestFieldName>template_id</requestFieldName>
                <primaryFieldName>template_id</primaryFieldName>
            </settings>
        </dataProvider>

    </dataSource>

    <fieldset name="general" sortOrder="10">
        <settings>
            <label translate="true">Template Information</label>
            <collapsible>false</collapsible>
        </settings>

        <field name="name" formElement="input" sortOrder="10">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">bluefoot_template_create_data_source</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Name</label>
                <dataType>text</dataType>
                <dataScope>name</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field name="preview" class="Gene\BlueFoot\Ui\Component\Form\Element\DataType\TemplatePreview" formElement="input" component="Gene_BlueFoot/js/component/core/template/preview">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">bluefoot_template_create_data_source</item>
                </item>
                <item name="js_config" xsi:type="array">
                    <item name="template" xsi:type="string">Gene_BlueFoot/component/core/template/preview</item>
                    <item name="stageNameSpace" xsi:type="string">bluefoot_template_manager.bluefoot_template_manager</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Template Preview</label>
                <visible>true</visible>
                <dataType>text</dataType>
                <dataScope>preview</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
</form>