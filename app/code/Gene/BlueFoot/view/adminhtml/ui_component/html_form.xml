<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">html_form.html_form_data_source</item>
            <deps>
				<dep>html_form.html_form_data_source</dep>
			</deps>
        </item>
        <label>Code</label>
        <item name="config" xsi:type="array">
            <dataScope>data</dataScope>
            <namespace>html_form</namespace>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Gene\BlueFoot\Block\Adminhtml\ContentType\Edit\SaveButton"/>
            <button name="reset" class="Gene\BlueFoot\Block\Adminhtml\ContentType\Edit\ResetButton"/>
            <button name="close" class="Gene\BlueFoot\Block\Adminhtml\ContentType\Edit\CloseButton"/>
        </buttons>
    </settings>
    <dataSource name="html_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <class>Gene\BlueFoot\Model\ContentBlock\DataProvider</class>
            <name>html_form_data_source</name>
            <primaryFieldName/>
            <requestFieldName/>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <component>Gene_BlueFoot/js/form/provider</component>
            </item>
        </argument>
    </dataSource>
    <fieldset name="general">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <label/>
            </item>
        </argument>
        <field name="html">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <dataType>text</dataType>
                    <label>HTML</label>
                    <formElement>textarea</formElement>
                    <item name="source" xsi:type="string">page</item>
                    <sort_order>1</sort_order>
                    <dataScope>html</dataScope>
                    <item name="default" xsi:type="string">Type your HTML here...</item>
                	<validation>
                    	<rule name="required-entry" xsi:type="boolean">true</rule>
                	</validation>
                </item>
            </argument>
        </field>
    </fieldset>
    <fieldset name="advanced">
        <settings>
            <label translate="true">Advanced</label>
            <collapsible>true</collapsible>
        </settings>
        <field name="css_classes" sortOrder="1" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">CSS Classes</label>
                <dataScope>css_classes</dataScope>
                <notice translate="true">Space separated list of classes.</notice>
            </settings>
        </field>
        <field name="text_align" sortOrder="10" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">left</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Alignment</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">left</item>
                                <label>Left</label>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">center</item>
                                <label>Center</label>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">right</item>
                                <label>Right</label>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="margins_and_padding" sortOrder="20" formElement="input" component="Gene_BlueFoot/js/form/element/margins_and_padding">
            <settings>
                <label>Margins and Padding</label>
            </settings>
        </field>
    </fieldset>
</form>
