<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">divider_form.divider_form_data_source</item>
            <item name="deps" xsi:type="string">divider_form.divider_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Divider</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">divider_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Gene\BlueFoot\Block\Adminhtml\ContentType\Edit\SaveButton"/>
            <button name="reset" class="Gene\BlueFoot\Block\Adminhtml\ContentType\Edit\ResetButton"/>
            <button name="close" class="Gene\BlueFoot\Block\Adminhtml\ContentType\Edit\CloseButton"/>
        </buttons>
    </settings>
    <dataSource name="divider_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Gene\BlueFoot\Model\ContentBlock\DataProvider</argument>
            <argument name="name" xsi:type="string">divider_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string" />
            <argument name="requestFieldName" xsi:type="string" />
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="general">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string"/>
            </item>
        </argument>
        <field name="border_color" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">#000000</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Color</label>
                <addAfter>hex code</addAfter>
                <notice translate="true">Example: #FF5733</notice>
            </settings>
        </field>
        <field name="border_width" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">1px</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Height</label>
                <notice translate="true">How thick do you want the divider to be? Default is 1px.</notice>
            </settings>
        </field>
        <field name="width" sortOrder="30" formElement="input">
            <settings>
                <label translate="true">Width</label>
                <addAfter>px or %</addAfter>
                <notice translate="true">Example: 50px or 100%</notice>
            </settings>
        </field>
    </fieldset>
</form>
