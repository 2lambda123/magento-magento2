<?xml version="1.0" encoding="UTF-8"?>
<!--
/**
 * BlueFoot template manager
 * @author Aidan Threadgold <aidan@gene.co.uk>
*/
-->
<modal xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" component="Gene_BlueFoot/js/component/template" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="template" xsi:type="string">templates/container/default</item>
        <item name="config" xsi:type="array">
            <item name="create_modal" xsi:type="array">
                <item name="render_url" xsi:type="url" path="bluefoot/stage/template_form" />
                <item name="update_url" xsi:type="url" path="bluefoot/stage/template_save" />
            </item>
        </item>`
    </argument>
    <settings>
        <options>
            <option name="title" xsi:type="string" translate="true">Template Manager</option>
            <option name="buttons" xsi:type="array">
                <item name="0" xsi:type="array">
                    <item name="text" xsi:type="string">Use Template</item>
                    <item name="class" xsi:type="string">action-primary</item>
                    <item name="actions" xsi:type="array">
                        <item name="0" xsi:type="array">
                            <item name="targetName" xsi:type="string">${ $.name }</item>
                            <item name="actionName" xsi:type="string">actionDone</item>
                        </item>
                    </item>
                </item>
                <item name="1" xsi:type="array">
                    <item name="text" xsi:type="string">Cancel</item>
                    <item name="actions" xsi:type="array">
                        <item name="0" xsi:type="array">
                            <item name="targetName" xsi:type="string">${ $.name }</item>
                            <item name="actionName" xsi:type="string">actionCancel</item>
                        </item>
                    </item>
                </item>
                <item name="2" xsi:type="array">
                    <item name="text" xsi:type="string">New Template</item>
                    <item name="actions" xsi:type="array">
                        <item name="0" xsi:type="array">
                            <item name="targetName" xsi:type="string">${ $.name }</item>
                            <item name="actionName" xsi:type="string">actionSaveTemplate</item>
                        </item>
                    </item>
                </item>
            </option>
        </options>
    </settings>

    <dataSource name="bluefoot_template_manager_data_source" component="Magento_Ui/js/form/provider">
        <dataProvider name="bluefoot_template_manager_data_source" class="Gene\BlueFoot\Ui\DataProvider\Template\DataProvider">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <!-- Child HTML Component to display our list of templates -->
    <htmlContent class="Gene\BlueFoot\Ui\Component\Template" name="bluefoot_template_manager_content" component="Gene_BlueFoot/js/component/template/list">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="render_url" xsi:type="url" path="bluefoot/stage/template_index" />
            </item>
        </argument>
    </htmlContent>
</modal>