<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_types.xsd">
    <content_types>
        <type name="accordion" sortOrder="10" translate="label">
            <label>Accordion</label>
            <icon>icon-pagebuilder-accordian</icon>
            <component>Magento_PageBuilder/js/content-type-collection</component>
            <preview_component>Magento_PageBuilder/js/component/block/preview/accordion</preview_component>
            <content_component>Magento_PageBuilder/js/component/content/accordion</content_component>
            <form>pagebuilder_accordion_form</form>
            <group>interactive</group>
            <allowed_parents>
                <parent name="row"/>
                <parent name="column"/>
                <parent name="tab-item"/>
            </allowed_parents>
            <appearances>
                <appearance default="true" name="default">
                    <data_mapping>
                        <elements>
                            <element name="main" path=".">
                                <attributes>
                                    <attribute name="data-role" var="name"/>
                                    <attribute name="data-appearance" var="appearance"/>
                                </attributes>
                                <css var="css_classes"/>
                            </element>
                        </elements>
                    </data_mapping>
                    <preview_template>Magento_PageBuilder/component/block/preview/accordion.html</preview_template>
                    <render_template>Magento_PageBuilder/component/block/render/accordion.html</render_template>
                    <readers>
                        <reader component="Magento_PageBuilder/js/component/format/read/default" name="default"/>
                        <reader component="Magento_PageBuilder/js/component/format/read/accordion" name="accordion"/>
                    </readers>
                </appearance>
            </appearances>
        </type>
    </content_types>
</config>
