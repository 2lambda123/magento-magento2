<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_types.xsd">
    <content_types>
        <type name="slider" sortOrder="30" translate="label">
            <label>Slider</label>
            <icon>icon-pagebuilder-slider</icon>
            <component>Magento_PageBuilder/js/content-type-collection</component>
            <preview_component>Magento_PageBuilder/js/content-type/slider/preview</preview_component>
            <content_component>Magento_PageBuilder/js/content-type/content-collection</content_component>
            <form>pagebuilder_slider_form</form>
            <group>media</group>
            <allowed_parents>
                <parent name="row"/>
                <parent name="column"/>
                <parent name="tab-item"/>
            </allowed_parents>
            <appearances>
                <appearance default="true" name="default">
                    <data_mapping>
                        <elements>
                            <element name="main" path=".">
                                <style_properties>
                                    <property var="text_align" name="text_align"/>
                                    <property var="min_height" name="min_height" converter="Magento_PageBuilder/js/converter/style/remove-px"/>
                                    <property converter="Magento_PageBuilder/js/converter/style/border-style" var="border" name="border_style"/>
                                    <property converter="Magento_PageBuilder/js/converter/style/color" name="border_color" var="border_color"/>
                                    <property converter="Magento_PageBuilder/js/converter/style/border-width" name="border_width" var="border_width"/>
                                    <property converter="Magento_PageBuilder/js/converter/style/remove-px" name="border_radius" var="border_radius"/>
                                    <complex_property converter="Magento_PageBuilder/js/converter/style/margins" reader="Magento_PageBuilder/js/property/margins" var="margins_and_padding"/>
                                </style_properties>
                                <attributes>
                                    <attribute name="data-role" var="name"/>
                                    <attribute name="data-autoplay" var="autoplay"/>
                                    <attribute name="data-autoplay-speed" var="autoplay_speed"/>
                                    <attribute name="data-fade" var="fade"/>
                                    <attribute name="data-infinite-loop" var="infinite_loop"/>
                                    <attribute name="data-show-arrows" var="show_arrows"/>
                                    <attribute name="data-show-dots" var="show_dots"/>
                                </attributes>
                                <css var="css_classes"/>
                            </element>
                        </elements>
                    </data_mapping>
                    <preview_template>Magento_PageBuilder/content-type/slider/default/preview</preview_template>
                    <render_template>Magento_PageBuilder/content-type/slider/default/master</render_template>
                    <readers>
                        <reader component="Magento_PageBuilder/js/master-format/read/default" name="default"/>
                    </readers>
                </appearance>
            </appearances>
        </type>
    </content_types>
</config>
