<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_types.xsd">
    <content_types>
        <type name="column" sortOrder="15" translate="label">
            <label>Column</label>
            <icon>icon-pagebuilder-column</icon>
            <component>Magento_PageBuilder/js/content-type-collection</component>
            <preview_component>Magento_PageBuilder/js/component/block/preview/column</preview_component>
            <content_component>Magento_PageBuilder/js/content-collection</content_component>
            <form>pagebuilder_column_form</form>
            <group>general</group>
            <allowed_parents>
                <parent name="row"/>
                <parent name="column-group"/>
                <parent name="tab-item"/>
            </allowed_parents>
            <appearances>
                <appearance default="true" name="full-height">
                    <data name="align_self">stretch</data>
                    <preview_template>Magento_PageBuilder/component/block/preview/column.html</preview_template>
                    <render_template>Magento_PageBuilder/component/block/render/column.html</render_template>
                    <readers>
                        <reader component="Magento_PageBuilder/js/component/format/read/default" name="default"/>
                    </readers>
                </appearance>
                <appearance name="align-top">
                    <data name="align_self">flex-start</data>
                    <preview_template>Magento_PageBuilder/component/block/preview/column.html</preview_template>
                    <render_template>Magento_PageBuilder/component/block/render/column.html</render_template>
                    <readers>
                        <reader component="Magento_PageBuilder/js/component/format/read/default" name="default"/>
                    </readers>
                </appearance>
                <appearance name="align-center">
                    <data name="align_self">center</data>
                    <preview_template>Magento_PageBuilder/component/block/preview/column.html</preview_template>
                    <render_template>Magento_PageBuilder/component/block/render/column.html</render_template>
                    <readers>
                        <reader component="Magento_PageBuilder/js/component/format/read/default" name="default"/>
                    </readers>
                </appearance>
                <appearance name="align-bottom">
                    <data name="align_self">flex-end</data>
                    <preview_template>Magento_PageBuilder/component/block/preview/column.html</preview_template>
                    <render_template>Magento_PageBuilder/component/block/render/column.html</render_template>
                    <readers>
                        <reader component="Magento_PageBuilder/js/component/format/read/default" name="default"/>
                    </readers>
                </appearance>
            </appearances>
        </type>
    </content_types>
</config>
