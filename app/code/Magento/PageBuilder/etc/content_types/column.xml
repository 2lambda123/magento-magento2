<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_types.xsd">
    <content_types>
        <type name="column" type="container" sortOrder="15" translate="label">
            <label>Column</label>
            <icon>icon-pagebuilder-column</icon>
            <component>Magento_PageBuilder/js/content-type-collection</component>
            <preview_component>Magento_PageBuilder/js/content-type/column/preview</preview_component>
            <content_component>Magento_PageBuilder/js/content-type/content-collection</content_component>
            <generate_allowed_containers>Magento_PageBuilder/js/content-type/column/allowed-containers</generate_allowed_containers>
            <form>pagebuilder_column_form</form>
            <group>general</group>
            <appearances>
                <appearance default="true" name="full-height">
                    <data name="align_self">stretch</data>
                    <preview_template>Magento_PageBuilder/content-type/column/full-height/preview</preview_template>
                    <render_template>Magento_PageBuilder/content-type/column/full-height/master</render_template>
                    <readers>
                        <reader component="Magento_PageBuilder/js/master-format/read/default" name="default"/>
                    </readers>
                </appearance>
                <appearance name="align-top">
                    <data name="align_self">flex-start</data>
                    <preview_template>Magento_PageBuilder/content-type/column/full-height/preview</preview_template>
                    <render_template>Magento_PageBuilder/content-type/column/full-height/master</render_template>
                    <readers>
                        <reader component="Magento_PageBuilder/js/master-format/read/default" name="default"/>
                    </readers>
                </appearance>
                <appearance name="align-center">
                    <data name="align_self">center</data>
                    <preview_template>Magento_PageBuilder/content-type/column/full-height/preview</preview_template>
                    <render_template>Magento_PageBuilder/content-type/column/full-height/master</render_template>
                    <readers>
                        <reader component="Magento_PageBuilder/js/master-format/read/default" name="default"/>
                    </readers>
                </appearance>
                <appearance name="align-bottom">
                    <data name="align_self">flex-end</data>
                    <preview_template>Magento_PageBuilder/content-type/column/full-height/preview</preview_template>
                    <render_template>Magento_PageBuilder/content-type/column/full-height/master</render_template>
                    <readers>
                        <reader component="Magento_PageBuilder/js/master-format/read/default" name="default"/>
                    </readers>
                </appearance>
            </appearances>
        </type>
    </content_types>
</config>
