<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_types.xsd">
    <content_types>
        <type name="tabs" translate="label" sortOrder="1">
            <label>Tabs</label>
            <icon>icon-pagebuilder-tabs</icon>
            <component>Magento_PageBuilder/js/content-type-collection</component>
            <preview_component>Magento_PageBuilder/js/content-type/tabs/preview</preview_component>
            <content_component>Magento_PageBuilder/js/content-collection</content_component>
            <form>pagebuilder_tabs_form</form>
            <group>interactive</group>
            <allowed_parents>
                <parent name="row"/>
                <parent name="column"/>
            </allowed_parents>
            <appearances>
                <appearance name="default" default="true">
                    <data_mapping>
                        <elements>
                            <element name="main" path=".">
                                <style_properties>
                                    <complex_property var="margins_and_padding" reader="Magento_PageBuilder/js/property/default/margins-and-paddings" converter="Magento_PageBuilder/js/converter/default/style/margins-and-paddings" preview_converter="Magento_PageBuilder/js/converter/row/style/margins-and-paddings"/>
                                </style_properties>
                                <attributes>
                                    <attribute var="name" name="data-role"/>
                                    <attribute name="data-appearance" var="appearance"/>
                                    <attribute var="default_active" name="data-active-tab"/>
                                </attributes>
                                <css var="css_classes">
                                    <filter>
                                        <class name="tab-align-left"/>
                                        <class name="tab-align-center"/>
                                        <class name="tab-align-right"/>
                                    </filter>
                                </css>
                            </element>
                            <element name="headers" path=".//ul/li">
                                <style_properties>
                                    <property var="border" name="border_style" converter="Magento_PageBuilder/js/converter/default/style/border-style"/>
                                    <property var="border_radius" name="border_radius" converter="Magento_PageBuilder/js/converter/default/style/remove-px"/>
                                    <property var="border_color" name="border_color" converter="Magento_PageBuilder/js/converter/default/style/color"/>
                                    <property var="border_width" name="border_width" converter="Magento_PageBuilder/js/converter/default/style/remove-px"/>
                                </style_properties>
                            </element>
                            <element name="navigation" path=".//ul">
                                <style_properties>
                                    <property var="navigation_alignment" name="text_align"/>
                                </style_properties>
                            </element>
                            <element name="content" path=".//div">
                                <style_properties>
                                    <property var="border" name="border_style" converter="Magento_PageBuilder/js/converter/default/style/border-style"/>
                                    <property var="text_align" name="text_align"/>
                                    <property var="border_color" name="border_color" converter="Magento_PageBuilder/js/converter/default/style/color"/>
                                    <property var="border_width" name="border_width" converter="Magento_PageBuilder/js/converter/default/style/remove-px"/>
                                    <property var="border_radius" name="border_radius" converter="Magento_PageBuilder/js/converter/default/style/remove-px"/>
                                    <property var="min_height" name="min_height" converter="Magento_PageBuilder/js/converter/default/style/remove-px"/>
                                </style_properties>
                            </element>
                        </elements>
                        <converters>
                            <converter name="header_alignment_class" component="Magento_PageBuilder/js/converter/tabs/header-alignment-class">
                                <config>
                                    <item name="navigation_alignment_variable" value="navigation_alignment"/>
                                </config>
                            </converter>
                        </converters>
                    </data_mapping>
                    <preview_template>Magento_PageBuilder/content-type/tabs/default/preview</preview_template>
                    <render_template>Magento_PageBuilder/content-type/tabs/default/master</render_template>
                    <reader>Magento_PageBuilder/js/component/format/read/configurable</reader>
                </appearance>
            </appearances>
        </type>
    </content_types>
</config>
