<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_types.xsd">
    <content_types>
        <type name="products" sortOrder="20" translate="label">
            <label>Product</label>
            <icon>icon-pagebuilder-products</icon>
            <component>Magento_PageBuilder/js/component/block/product</component>
            <form>pagebuilder_products_form</form>
            <group>magento</group>
            <backend_block>Magento\PageBuilder\Block\ContentType\Product</backend_block>
            <backend_template>Magento_PageBuilder::pagebuilder/blocks/core/product.phtml</backend_template>
            <allowed_parents>
                <parent name="row"/>
                <parent name="column"/>
                <parent name="tab"/>
            </allowed_parents>
            <appearances>
                <appearance default="true" name="default">
                    <data_mapping>
                        <elements>
                            <element name="main" path=".">
                                <style_properties>
                                    <property name="text_align" var="text_align"/>
                                    <property name="border_style" var="border"/>
                                    <property converter="Magento_PageBuilder/js/converter/default/style/color" name="border_color" var="border_color"/>
                                    <property converter="Magento_PageBuilder/js/converter/default/style/border-width" name="border_width" var="border_width"/>
                                    <property converter="Magento_PageBuilder/js/converter/default/style/remove-px" name="border_radius" var="border_radius"/>
                                    <complex_property converter="Magento_PageBuilder/js/converter/default/style/margins-and-paddings" reader="Magento_PageBuilder/js/property/default/margins-and-paddings" var="margins_and_padding"/>
                                </style_properties>
                                <attributes>
                                    <attribute name="data-role" var="name"/>
                                    <attribute name="data-sku" var="sku"/>
                                    <attribute name="data-view-mode" var="view_mode"/>
                                </attributes>
                                <html placeholder="Product" var="html"/>
                                <css var="css_classes"/>
                            </element>
                        </elements>
                    </data_mapping>
                    <preview_template>Magento_PageBuilder/component/block/preview/product.html</preview_template>
                    <render_template>Magento_PageBuilder/component/block/render/product.html</render_template>
                    <reader>Magento_PageBuilder/js/component/format/read/configurable</reader>
                </appearance>
            </appearances>
        </type>
    </content_types>
</config>
