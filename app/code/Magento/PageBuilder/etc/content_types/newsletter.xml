<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_types.xsd">
    <content_types>
        <type name="newsletter" type="static" sortOrder="30" translate="label">
            <label>Newsletter</label>
            <icon>icon-pagebuilder-newsletter</icon>
            <component>Magento_PageBuilder/js/content-type</component>
            <preview_component>Magento_PageBuilder/js/content-type/newsletter/preview</preview_component>
            <form>pagebuilder_newsletter_form</form>
            <group>interactive</group>
            <backend_block>Magento\PageBuilder\Block\ContentType\Newsletter</backend_block>
            <backend_template>Magento_PageBuilder::content_type/newsletter.phtml</backend_template>
            <appearances>
                <appearance default="true" name="default">
                    <data_mapping>
                        <elements>
                            <element name="main" path=".">
                                <style_properties>
                                    <property name="text_align" var="text_align"/>
                                    <property converter="Magento_PageBuilder/js/converter/style/border-style" var="border" name="border_style"/>
                                    <property converter="Magento_PageBuilder/js/converter/style/color" name="border_color" var="border_color"/>
                                    <property converter="Magento_PageBuilder/js/converter/style/border-width" name="border_width" var="border_width"/>
                                    <property converter="Magento_PageBuilder/js/converter/style/remove-px" name="border_radius" var="border_radius"/>
                                    <complex_property converter="Magento_PageBuilder/js/converter/style/margins-and-paddings" reader="Magento_PageBuilder/js/property/margins-and-paddings" var="margins_and_padding"/>
                                </style_properties>
                                <attributes>
                                    <attribute name="data-role" var="name"/>
                                    <attribute name="data-appearance" var="appearance"/>
                                    <attribute name="data-button-text" var="button_text"/>
                                    <attribute name="data-label-text" var="label_text"/>
                                    <attribute name="data-placeholder" var="placeholder"/>
                                    <attribute name="data-title" var="title"/>
                                </attributes>
                                <html var="html"/>
                                <css var="css_classes"/>
                            </element>
                        </elements>
                    </data_mapping>
                    <preview_template>Magento_PageBuilder/content-type/newsletter/default/preview</preview_template>
                    <render_template>Magento_PageBuilder/content-type/newsletter/default/master</render_template>
                    <reader>Magento_PageBuilder/js/master-format/read/configurable</reader>
                </appearance>
            </appearances>
        </type>
    </content_types>
</config>
