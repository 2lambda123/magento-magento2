<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_types.xsd">
    <content_types>
        <type name="slide" type="static" translate="label">
            <label>Slide</label>
            <icon>icon-pagebuilder-slider</icon>
            <component>Magento_PageBuilder/js/content-type</component>
            <preview_component>Magento_PageBuilder/js/content-type/slide/preview</preview_component>
            <content_component>Magento_PageBuilder/js/content-type/slide/content</content_component>
            <form>pagebuilder_slide_form</form>
            <group>media</group>
            <appearances>
                <appearance name="collage-left">
                    <preview_template>Magento_PageBuilder/content-type/slide/collage-left/preview</preview_template>
                    <render_template>Magento_PageBuilder/content-type/slide/collage-left/master</render_template>
                    <readers>
                        <reader component="Magento_PageBuilder/js/master-format/read/default" name="default"/>
                        <reader component="Magento_PageBuilder/js/master-format/read/appearance/slide/collage" name="collage"/>
                    </readers>
                </appearance>
                <appearance name="collage-centered">
                    <preview_template>Magento_PageBuilder/content-type/slide/collage-centered/preview</preview_template>
                    <render_template>Magento_PageBuilder/content-type/slide/collage-centered/master</render_template>
                    <readers>
                        <reader component="Magento_PageBuilder/js/master-format/read/default" name="default"/>
                        <reader component="Magento_PageBuilder/js/master-format/read/appearance/slide/collage" name="collage"/>
                    </readers>
                </appearance>
                <appearance name="collage-right">
                    <preview_template>Magento_PageBuilder/content-type/slide/collage-right/preview</preview_template>
                    <render_template>Magento_PageBuilder/content-type/slide/collage-right/master</render_template>
                    <readers>
                        <reader component="Magento_PageBuilder/js/master-format/read/default" name="default"/>
                        <reader component="Magento_PageBuilder/js/master-format/read/appearance/slide/collage" name="collage"/>
                    </readers>
                </appearance>
                <appearance default="true" name="poster">
                    <preview_template>Magento_PageBuilder/content-type/slide/poster/preview</preview_template>
                    <render_template>Magento_PageBuilder/content-type/slide/poster/master</render_template>
                    <readers>
                        <reader component="Magento_PageBuilder/js/master-format/read/default" name="default"/>
                        <reader component="Magento_PageBuilder/js/master-format/read/slide" name="poster"/>
                    </readers>
                </appearance>
            </appearances>
            <is_visible>false</is_visible>
        </type>
    </content_types>
</config>
