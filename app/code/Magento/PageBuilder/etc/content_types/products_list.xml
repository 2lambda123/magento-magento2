<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_types.xsd">
    <content_types>
        <type name="products-list" sortOrder="20" translate="label">
            <label>Product List</label>
            <icon>icon-pagebuilder-products</icon>
            <component>Magento_PageBuilder/js/content-type</component>
            <preview_component>Magento_PageBuilder/js/content-type/product-list/preview</preview_component>
            <form>pagebuilder_products_list_form</form>
            <group>magento</group>
            <backend_block>Magento\PageBuilder\Block\ContentType\ProductList</backend_block>
            <backend_template>Magento_PageBuilder::content_type/product_list.phtml</backend_template>
            <allowed_parents>
                <parent name="row"/>
                <parent name="column"/>
                <parent name="tab-item"/>
            </allowed_parents>
            <appearances>
                <appearance default="true" name="default">
                    <data_mapping>
                        <elements>
                            <element name="main" path=".">
                                <style_properties>
                                    <property name="text_align" var="text_align"/>
                                    <property converter="Magento_PageBuilder/js/converter/default/style/border-style" var="border" name="border_style"/>
                                    <property converter="Magento_PageBuilder/js/converter/default/style/color" name="border_color" var="border_color"/>
                                    <property converter="Magento_PageBuilder/js/converter/default/style/border-width" name="border_width" var="border_width"/>
                                    <property converter="Magento_PageBuilder/js/converter/default/style/remove-px" name="border_radius" var="border_radius"/>
                                    <complex_property converter="Magento_PageBuilder/js/converter/default/style/margins-and-paddings" reader="Magento_PageBuilder/js/property/default/margins-and-paddings" var="margins_and_padding"/>
                                </style_properties>
                                <attributes>
                                    <attribute name="data-role" var="name"/>
                                    <attribute name="data-appearance" var="appearance"/>
                                    <attribute name="data-category-id" var="category_id"/>
                                    <attribute name="data-product-count" var="product_count"/>
                                </attributes>
                                <html placeholder="Product List" var="html"/>
                                <css var="css_classes"/>
                            </element>
                        </elements>
                    </data_mapping>
                    <preview_template>Magento_PageBuilder/content-type/products-list/default/preview</preview_template>
                    <render_template>Magento_PageBuilder/content-type/products-list/default/master</render_template>
                    <reader>Magento_PageBuilder/js/component/format/read/configurable</reader>
                </appearance>
            </appearances>
        </type>
    </content_types>
</config>
