<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_types.xsd">
    <content_types>
        <type name="column-group" sortOrder="10" translate="label">
            <label>Column Group</label>
            <icon>icon-pagebuilder-column</icon>
            <form/>
            <group>general</group>
            <component>Magento_PageBuilder/js/component/block/column-group</component>
            <preview_component>Magento_PageBuilder/js/component/block/preview/column-group</preview_component>
            <allowed_parents>
                <parent name="row"/>
            </allowed_parents>
            <is_visible>false</is_visible>
            <appearances>
                <appearance default="true" name="default">
                    <preview_template>Magento_PageBuilder/component/block/preview/column-group.html</preview_template>
                    <render_template>Magento_PageBuilder/component/block/render/column-group.html</render_template>
                    <readers>
                        <reader component="Magento_PageBuilder/js/component/format/read/default" name="default"/>
                    </readers>
                </appearance>
            </appearances>
        </type>
    </content_types>
</config>
