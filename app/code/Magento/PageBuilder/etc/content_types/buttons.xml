<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_types.xsd">
    <content_types>
        <type name="buttons" type="restricted-container" sortOrder="40" translate="label">
            <label>Buttons</label>
            <icon>icon-pagebuilder-button</icon>
            <component>Magento_PageBuilder/js/content-type-collection</component>
            <preview_component>Magento_PageBuilder/js/content-type/buttons/preview</preview_component>
            <content_component>Magento_PageBuilder/js/content-type/content-collection</content_component>
            <form>pagebuilder_buttons_form</form>
            <group>general</group>
            <accepts>
                <type name="button-item" />
            </accepts>
            <appearances>
                <appearance default="true" name="default">
                    <data_mapping>
                        <elements>
                            <element name="main" path=".">
                                <style_properties>
                                    <property name="text_align" var="text_align"/>
                                    <property converter="Magento_PageBuilder/js/converter/style/border-style" var="border" name="border_style"/>
                                    <property converter="Magento_PageBuilder/js/converter/style/color" name="border_color" var="border_color"/>
                                    <property converter="Magento_PageBuilder/js/converter/style/border-width" name="border_width" var="border_width"/>
                                    <property converter="Magento_PageBuilder/js/converter/style/remove-px" name="border_radius" var="border_radius"/>
                                    <complex_property converter="Magento_PageBuilder/js/converter/style/margins-and-paddings" reader="Magento_PageBuilder/js/property/margins-and-paddings" var="margins_and_padding"/>
                                </style_properties>
                                <attributes>
                                    <attribute name="data-role" var="name"/>
                                </attributes>
                                <css var="css_classes"/>
                            </element>
                        </elements>
                    </data_mapping>
                    <preview_template>Magento_PageBuilder/content-type/buttons/default/preview</preview_template>
                    <render_template>Magento_PageBuilder/content-type/buttons/default/master</render_template>
                    <reader>Magento_PageBuilder/js/master-format/read/configurable</reader>
                </appearance>
            </appearances>
        </type>
    </content_types>
</config>
