<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminAddImageToWYSIWYGCatalogTest">
        <before>
            <magentoCLI command="config:set cms/pagebuilder/enabled 0" stepKey="disablePageBuilder" after="switchToTinyMCE4"/>
        </before>
        <after>
            <magentoCLI command="config:set cms/pagebuilder/enabled 1" stepKey="enablePageBuilder" after="disableWYSIWYG"/>
        </after>
    </test>
    <test name="VerifyTinyMCEv4IsNativeWYSIWYGOnCatalogTest">
        <before>
            <magentoCLI command="config:set cms/pagebuilder/enabled 0" stepKey="disablePageBuilder" after="switchToTinyMCE4"/>
        </before>
        <after>
            <magentoCLI command="config:set cms/pagebuilder/enabled 1" stepKey="enablePageBuilder" after="disableWYSIWYG"/>
        </after>
    </test>
    <test name="PageBuilderCategoryDisablePageBuilder" extends="PageBuilderProductDisablePageBuilder">
        <annotations>
            <features value="PageBuilder"/>
            <stories value="Catalog Category"/>
            <title value="Verify PageBuilder Does Not Appear When Disabled"/>
            <description value="This test is intended to ensure that PageBuilder does not appear when disabled for Catalog Category."/>
            <severity value="CRITICAL"/>
            <useCaseId value="MC-3330"/>
            <testCaseId value="MC-14835"/>
            <group value="pagebuilder"/>
            <group value="pagebuilder-disable"/>
            <group value="pagebuilder-catalog-category"/>
        </annotations>
        <before>
            <createData entity="_defaultCategory" stepKey="createPreReqCategory"/>
            <comment userInput="---merging to remove step---" stepKey="createProduct"/>
            <actionGroup ref="navigateToCreatedCategory" stepKey="navigateToCreatedProductEditPage">
                <argument name="Category" value="$$createPreReqCategory$$"/>
            </actionGroup>
            <conditionalClick selector="{{AdminCategoryContentSection.sectionHeader}}" dependentSelector="{{AdminCategoryContentSection.uploadButton}}" visible="false" stepKey="expandAdminProductSection"/>
        </before>
        <after>
            <comment userInput="---merging to remove step---" stepKey="deleteCreatedProduct"/>
            <comment userInput="---merging to remove step---" stepKey="NavigateToAndResetProductGridToDefaultView"/>
        </after>
        <!-- Scroll to the opened section so PageBuilder button will be in viewport if it's there -->
        <scrollTo selector="{{AdminCategoryContentSection.sectionHeader}}" before="seePageBuilderButton" stepKey="scrollToSection" />
        <seeElement selector="{{PageBuilderCategoryAttribute.PageBuilderBtn('description')}}" stepKey="seePageBuilderButton"/>
        <actionGroup ref="navigateToCreatedCategory" stepKey="navigateToCreatedProductEditPage">
            <argument name="Category" value="$$createPreReqCategory$$"/>
        </actionGroup>
        <conditionalClick selector="{{AdminCategoryContentSection.sectionHeader}}" dependentSelector="{{AdminCategoryContentSection.uploadButton}}" visible="false" stepKey="expandAdminProductSection"/>
        <dontSeeElementInDOM selector="{{PageBuilderCategoryAttribute.PageBuilderBtn('description')}}" stepKey="dontSeePageBuilderButton"/>
    </test>
</tests>
