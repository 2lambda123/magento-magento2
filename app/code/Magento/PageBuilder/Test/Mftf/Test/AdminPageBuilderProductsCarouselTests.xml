    <test name="AdminPageBuilderProductsCarouselValidateAppearance" extends="AdminPageBuilderProductsGridValidateAppearance">
        <annotations>
            <features value="PageBuilder"/>
            <stories value="Products"/>
            <title value="Carousel - Validate Products Carousel Appearance"/>
            <description value="Validate that setting the Products content type to a Carousel appearance renders correctly on the Stage and Storefront."/>
            <severity value="CRITICAL"/>
            <useCaseId value="PB-77"/>
            <testCaseId value="MC-22073"/>
            <group value="pagebuilder"/>
            <group value="pagebuilder-products"/>
            <group value="pagebuilder-productsCarousel"/>
        </annotations>
        <actionGroup ref="chooseVisualSelectOption" stepKey="selectAppearance">
            <argument name="property" value="PageBuilderProductsProductCarouselAppearance"/>
        </actionGroup>
        <actionGroup ref="fillSlideOutPanelFieldGeneral" stepKey="enterProductsCount">
            <argument name="property" value="PageBuilderProductsCarouselCountPropertyMax"/>
        </actionGroup>
        <actionGroup ref="validateProductCountInProducts" stepKey="validateProductCountStage">
            <argument name="page" value="ProductsCarouselOnStage"/>
            <argument name="count" value="6"/>
        </actionGroup>
        <seeElement selector="{{ProductsCarouselOnStage.productByIndex('1', '5')}}" stepKey="seeProduct5Stage" after="validateProductCountStage"/>
        <dontSeeElement selector="{{ProductsCarouselOnStage.productByIndex('1', '6')}}" stepKey="dontSeeProduct6Stage" after="seeProduct5Stage"/>
        <remove keyForRemoval="product1HeightStage"/>
        <executeJS function="return document.evaluate(&quot;{{ProductsCarouselOnStage.productByIndex('1', '1')}}&quot;, document, null, XPathResult.FIRST_ORDERED_NODE_TYPE, null).singleNodeValue.getBoundingClientRect().top" stepKey="product1TopPositionStage"/>
        <executeJS function="return document.evaluate(&quot;{{ProductsCarouselOnStage.productByIndex('1', '6')}}&quot;, document, null, XPathResult.FIRST_ORDERED_NODE_TYPE, null).singleNodeValue.getBoundingClientRect().top" stepKey="product6TopPositionStage"/>
        <assertEquals stepKey="assertVerticalDistanceBetweenProductsIsGreaterThanIndividualProductHeightStage">
            <expectedResult type="int">0</expectedResult>
            <actualResult type="variable">verticalDistanceBetweenProductsStage</actualResult>
        </assertEquals>
        <seeElement selector="{{ProductsOnStorefront.productByIndex('1', '5')}}" stepKey="seeProduct5Storefront" after="validateProductCountStorefront"/>
        <dontSeeElement selector="{{ProductsOnStorefront.productByIndex('1', '6')}}" stepKey="dontSeeProduct6Storefront" after="seeProduct5Storefront"/>
        <remove keyForRemoval="product1HeightStorefront"/>
        <assertEquals stepKey="assertVerticalDistanceBetweenProductsIsGreaterThanIndividualProductHeightStorefront">
            <expectedResult type="int">0</expectedResult>
            <actualResult type="variable">verticalDistanceBetweenProductsStorefront</actualResult>
        </assertEquals>
    </test>
