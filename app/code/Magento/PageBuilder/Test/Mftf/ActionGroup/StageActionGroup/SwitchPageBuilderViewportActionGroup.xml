<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="SwitchPageBuilderViewport">
        <annotations>
            <description>Switch to different viewports</description>
        </annotations>
        <arguments>
            <argument name="viewportButton" type="string"/>
        </arguments>
        <conditionalClick selector="{{PageBuilderViewportSwitcherSection.viewportSwitcherButton(viewportButton)}}"
                          dependentSelector="{{PageBuilderStage.stageWrapperFullScreen}}"
                          visible="true"
                          stepKey="clickViewportSwitcherButton"/>
    </actionGroup>
</actionGroups>
