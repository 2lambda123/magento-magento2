<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="verifyHeadingDefaultAdvancedConfigurationNotVisible">
        <arguments>
            <argument name="page" defaultValue=""/>
            <argument name="headingType" defaultValue="PageBuilderHeadingTypeDefaultProperty"/>
            <argument name="border" defaultValue="PageBuilderAdvancedBorderPropertyNone"/>
            <argument name="borderRadius" defaultValue="PageBuilderAdvancedBorderRadiusDefaultProperty"/>
            <argument name="borderWidth" defaultValue="PageBuilderAdvancedBorderWidthPropertyDefault"/>
            <argument name="index" defaultValue="1" type="string"/>
        </arguments>
        <waitForElement selector="{{page.baseByTagName(headingType.value, index)}}" stepKey="waitForElement"/>
        <dontSeeElement selector="{{page.baseByTagName(headingType.value, index)}}" stepKey="dontSeeElement"/>
        <comment userInput="---merging to remove step---" stepKey="waitForAlignment"/>
        <comment userInput="---merging to remove step---" stepKey="dontSeeAlignment"/>
        <executeJS function="return window.getComputedStyle(document.evaluate('{{page.headingElement(headingType.value, index)}}', document.body).iterateNext()).borderStyle" stepKey="waitForBorder"/>
        <assertEquals stepKey="dontSeeBorder">
            <expectedResult type="string">none</expectedResult>
            <actualResult type="variable">waitForBorder</actualResult>
        </assertEquals>
        <executeJS function="return window.getComputedStyle(document.evaluate('{{page.headingElement(headingType.value, index)}}', document.body).iterateNext()).borderColor" stepKey="waitForBorderColor"/>
        <executeJS function="return window.getComputedStyle(document.evaluate('{{page.headingElement(headingType.value, index)}}', document.body).iterateNext()).color" stepKey="grabColorValue"/>
        <assertEquals stepKey="dontSeeBorderColor">
            <expectedResult type="variable">waitForBorderColor</expectedResult>
            <actualResult type="variable">grabColorValue</actualResult>
        </assertEquals>
        <executeJS function="return window.getComputedStyle(document.evaluate('{{page.headingElement(headingType.value, index)}}', document.body).iterateNext()).borderWidth.replace(&quot;px&quot;, &quot;&quot;)" stepKey="waitForBorderWidth"/>
        <assertEquals stepKey="dontSeeBorderWidth">
            <expectedResult type="string">0</expectedResult>
            <actualResult type="variable">waitForBorderWidth</actualResult>
        </assertEquals>
        <executeJS function="return window.getComputedStyle(document.evaluate('{{page.headingElement(headingType.value, index)}}', document.body).iterateNext()).borderRadius.replace(&quot;px&quot;, &quot;&quot;)" stepKey="waitForBorderRadius"/>
        <assertEquals stepKey="dontSeeBorderRadius">
            <expectedResult type="string">0</expectedResult>
            <actualResult type="variable">waitForBorderRadius</actualResult>
        </assertEquals>
        <waitForElement selector="{{page.noCssClasses(headingType.value, index)}}" stepKey="waitForCSSClasses"/>
        <dontSeeElement selector="{{page.noCssClasses(headingType.value, index)}}" stepKey="dontSeeCSSClasses"/>
        <comment userInput="---merging to remove step---" stepKey="waitForMargin"/>
        <comment userInput="---merging to remove step---" stepKey="dontSeeMargin"/>
        <comment userInput="---merging to remove step---" stepKey="waitForPadding"/>
        <comment userInput="---merging to remove step---" stepKey="dontSeePadding"/>
    </actionGroup>
</actionGroups>
