<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="ValidateContentTypeForCalculatedStyles">
        <annotations>
            <description>Validate set style is properly calculated</description>
        </annotations>
        <arguments>
            <argument name="selector" defaultValue="" type="string"/>
            <argument name="wrapperSelector" defaultValue="" type="string"/>
            <argument name="expectedProperty" defaultValue="" type="string"/>
            <argument name="cssProperty" defaultValue="backgroundColor" type="string"/>
        </arguments>
        <executeJS function="return window.getComputedStyle(document.evaluate('{{wrapperSelector}}', document.body).iterateNext()).{{cssProperty}}.replace(&quot;px&quot;, &quot;&quot;)" stepKey="grabWrapperProperty"/>
        <executeJS function="return window.getComputedStyle(document.evaluate('{{selector}}', document.body).iterateNext()).{{cssProperty}}.replace(&quot;px&quot;, &quot;&quot;)" stepKey="grabSelectorProperty"/>
        <executeJS function="return (Math.round(({$grabSelectorProperty} / {$grabWrapperProperty}) * 100) + '%')" stepKey="grabCalculatedWidthValue"/>
        <assertEquals stepKey="propertyIsEqualsAsExpected">
            <expectedResult type="string">{{expectedProperty}}</expectedResult>
            <actualResult type="variable">grabCalculatedWidthValue</actualResult>
        </assertEquals>
    </actionGroup>
</actionGroups>
