<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../../../../dev/tests/acceptance/vendor/magento/magento2-functional-testing-framework/src/Magento/FunctionalTestingFramework/Test/etc/actionGroupSchema.xsd">
    <actionGroup name="validateNewsletter">
        <arguments>
            <argument name="page" defaultValue=""/>
            <argument name="index" defaultValue="1" type="string"/>
            <argument name="buttonText" defaultValue=""/>
            <argument name="label" defaultValue=""/>
            <argument name="placeholder" defaultValue=""/>
            <argument name="title" defaultValue=""/>
        </arguments>
        <waitForElementVisible selector="{{page.base(index)}}" stepKey="waitForElement"/>
        <waitForElementVisible selector="{{page.form(index)}}" stepKey="waitForForm"/>
        <waitForElementVisible selector="{{page.buttonText(index, buttonText.value)}}" stepKey="waitForButtonText"/>
        <waitForElementVisible selector="{{page.label(index, label.value)}}" stepKey="waitForLabel"/>
        <waitForElementVisible selector="{{page.placeholder(index, placeholder.value)}}" stepKey="waitForPlaceholder"/>
        <waitForElementVisible selector="{{page.title(index, title.value)}}" stepKey="waitForTitle"/>
    </actionGroup>
</actionGroups>
