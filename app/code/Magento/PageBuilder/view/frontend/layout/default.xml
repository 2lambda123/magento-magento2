<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.components">
            <block class="Magento\PageBuilder\Block\Element\Widgets" name="pagebuilder_widgets" template="Magento_PageBuilder::widget/default.phtml">
                <arguments>
                    <argument name="config" xsi:type="array">
                        <item name="slider" xsi:type="array">
                            <item name="default" xsi:type="array">
                                <item name="component" xsi:type="string">Magento_PageBuilder::content-type/slider/default/default-widget.js</item>
                                <item name="appearance" xsi:type="string">default</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>