<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">button_form.button_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Button</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <deps>
            <dep>button_form.button_form_data_source</dep>
        </deps>
        <dataScope>data</dataScope>
        <namespace>button_form</namespace>
        <buttons>
            <button name="save" class="Magento\PageBuilder\Block\Adminhtml\ContentType\Edit\SaveButton"/>
            <button name="reset" class="Magento\PageBuilder\Block\Adminhtml\ContentType\Edit\ResetButton"/>
            <button name="close" class="Magento\PageBuilder\Block\Adminhtml\ContentType\Edit\CloseButton"/>
        </buttons>
    </settings>
    <dataSource name="button_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="button_form_data_source" class="Magento\PageBuilder\Model\ContentBlock\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="content">
        <settings>
            <label translate="true">Content</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="button_text" sortOrder="1" formElement="input">
            <settings>
                <label translate="true">Button Text</label>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field name="button_type" sortOrder="20" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">primary</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Button Type</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">primary</item>
                                <item name="label" xsi:type="string" translate="true">Primary</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">secondary</item>
                                <item name="label" xsi:type="string" translate="true">Secondary</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">link</item>
                                <item name="label" xsi:type="string" translate="true">Link</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="link" sortOrder="30" formElement="input">
            <settings>
                <label translate="true">Link</label>
                <dataType>text</dataType>
                <dataScope>link</dataScope>
            </settings>
        </field>
    </fieldset>

    <fieldset name="advanced">
        <settings>
            <label translate="true">Advanced</label>
            <collapsible>true</collapsible>
        </settings>
        <field name="css_classes" sortOrder="1" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">CSS Classes</label>
                <dataScope>css_classes</dataScope>
                <notice translate="true">Space separated list of classes.</notice>
            </settings>
        </field>
        <field name="text_align" sortOrder="10" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">left</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Alignment</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">left</item>
                                <item name="label" xsi:type="string" translate="true">Left</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">center</item>
                                <item name="label" xsi:type="string" translate="true">Center</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">right</item>
                                <item name="label" xsi:type="string" translate="true">Right</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="margins_and_padding" sortOrder="20" formElement="input" component="Magento_PageBuilder/js/form/element/margins_and_padding">
            <settings>
                <label translate="true">Margins and Padding</label>
            </settings>
        </field>
    </fieldset>

</form>
