<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">banner_form.banner_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Banner</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <deps>
            <dep>banner_form.banner_form_data_source</dep>
        </deps>
        <dataScope>data</dataScope>
        <namespace>banner_form</namespace>
        <buttons>
            <button name="save" class="Magento\PageBuilder\Block\Adminhtml\ContentType\Edit\SaveButton"/>
            <button name="reset" class="Magento\PageBuilder\Block\Adminhtml\ContentType\Edit\ResetButton"/>
            <button name="close" class="Magento\PageBuilder\Block\Adminhtml\ContentType\Edit\CloseButton"/>
        </buttons>
    </settings>
    <dataSource name="banner_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="banner_form_data_source" class="Magento\PageBuilder\Model\ContentBlock\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="appearance">
        <settings>
            <label translate="true">Appearance</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="appearance" sortOrder="1" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">poster</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Appearance</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="10" xsi:type="array">
                                <item name="value" xsi:type="string">poster</item>
                                <item name="label" xsi:type="string" translate="true">Poster</item>
                            </option>
                            <option name="20" xsi:type="array">
                                <item name="value" xsi:type="string">collage-left</item>
                                <item name="label" xsi:type="string" translate="true">Collage on the left</item>
                            </option>
                            <option name="30" xsi:type="array">
                                <item name="value" xsi:type="string">collage-centered</item>
                                <item name="label" xsi:type="string" translate="true">Collage centered</item>
                            </option>
                            <option name="40" xsi:type="array">
                                <item name="value" xsi:type="string">collage-right</item>
                                <item name="label" xsi:type="string" translate="true">Collage on the right</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="images">
        <settings>
            <label translate="true">Images</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="background_image" formElement="fileUploader">
            <settings>
                <notice translate="true">Allowed file types: jpeg, gif, png.</notice>
                <label translate="true">Background Image</label>
                <componentType>fileUploader</componentType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <fileUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                        </uploaderConfig>
                        <previewTmpl>Magento_PageBuilder/form/element/uploader/preview.html</previewTmpl>
                    </settings>
                </fileUploader>
            </formElements>
        </field>
        <field name="mobile_image" formElement="fileUploader">
            <settings>
                <notice translate="true">Allowed file types: jpeg, gif, png.</notice>
                <label translate="true">Mobile Image</label>
                <componentType>fileUploader</componentType>
            </settings>
            <formElements>
                <fileUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>2097152</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                        </uploaderConfig>
                        <previewTmpl>Magento_PageBuilder/form/element/uploader/preview.html</previewTmpl>
                    </settings>
                </fileUploader>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="link">
        <settings>
            <label translate="true">Link</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="link_text" sortOrder="1" formElement="input">
            <settings>
                <label translate="true">Link Text</label>
                <dataType>text</dataType>
                <dataScope>link_text</dataScope>
            </settings>
        </field>
        <field name="link_url" sortOrder="10" formElement="input">
            <settings>
                <label translate="true">Link URL</label>
                <dataType>text</dataType>
                <dataScope>link_url</dataScope>
            </settings>
        </field>
        <field name="open_in_new_window" sortOrder="20" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Open in New Window?</label>
                <dataScope>open_in_new_window</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="advanced">
        <settings>
            <label translate="true">Advanced</label>
            <collapsible>true</collapsible>
        </settings>
        <field name="css_classes" sortOrder="1" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">CSS Classes</label>
                <dataScope>css_classes</dataScope>
                <notice translate="true">Space separated list of classes.</notice>
            </settings>
        </field>
        <field name="text_align" sortOrder="10" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">left</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Alignment</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">left</item>
                                <item name="label" xsi:type="string" translate="true">Left</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">center</item>
                                <item name="label" xsi:type="string" translate="true">Center</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">right</item>
                                <item name="label" xsi:type="string" translate="true">Right</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="margins_and_padding" sortOrder="20" formElement="input" component="Magento_PageBuilder/js/form/element/margins-and-padding">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="array">
                        <item name="margin" xsi:type="array">
                            <item name="top" xsi:type="number">0</item>
                            <item name="right" xsi:type="number">0</item>
                            <item name="bottom" xsi:type="number">0</item>
                            <item name="left" xsi:type="number">0</item>
                        </item>
                        <item name="padding" xsi:type="array">
                            <item name="top" xsi:type="number">40</item>
                            <item name="right" xsi:type="number">40</item>
                            <item name="bottom" xsi:type="number">40</item>
                            <item name="left" xsi:type="number">40</item>
                        </item>
                    </item>
                </item>
            </argument>
            <settings>
                <label translate="true">Margins and Padding</label>
            </settings>
        </field>
    </fieldset>
</form>
