<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="content">
        <container name="container_description">
            <field name="description" formElement="wysiwyg">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="wysiwygConfigData" xsi:type="array">
                        <item name="enable_pagebuilder" xsi:type="boolean">false</item>
                    </item>
                </item>
            </argument>
        </field>
        </container>
        <container name="container_short_description">
            <field name="short_description" formElement="wysiwyg">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="wysiwygConfigData" xsi:type="array">
                        <item name="enable_pagebuilder" xsi:type="boolean">false</item>
                    </item>
                </item>
            </argument>
        </field>
        </container>
    </fieldset>
</form>
