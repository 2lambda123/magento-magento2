<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_type.xsd">
    <content_types>
        <type name="row" sortOrder="1" translate="label">
            <label>Row</label>
            <icon>icon-pagebuilder-row</icon>
            <component>Magento_PageBuilder/js/content-type-collection</component>
            <preview_component>Magento_PageBuilder/js/content-type/row/preview</preview_component>
            <content_component>Magento_PageBuilder/js/content-type/content-collection</content_component>
            <form>pagebuilder_row_form</form>
            <group>general</group>
            <allowed_parents>
                <parent name="stage"/>
            </allowed_parents>
            <appearances>
                <appearance default="true" name="default">
                    <data_mapping>
                        <elements>
                            <element name="main" path=".">
                                <style_properties>
                                    <property converter="Magento_PageBuilder/js/converter/style/color" name="background_color" var="background_color"/>
                                    <property converter="Magento_PageBuilder/js/converter/style/background-image" name="background_image" preview_converter="Magento_PageBuilder/js/converter/style/preview/background-image" var="background_image"/>
                                    <property name="background_position" var="background_position"/>
                                    <property name="background_size" var="background_size"/>
                                    <property name="background_repeat" var="background_repeat"/>
                                    <property name="background_attachment" var="background_attachment"/>
                                    <property name="text_align" var="text_align"/>
                                    <property converter="Magento_PageBuilder/js/converter/style/border-style" var="border" name="border_style"/>
                                    <property converter="Magento_PageBuilder/js/converter/style/color" name="border_color" var="border_color"/>
                                    <property converter="Magento_PageBuilder/js/converter/style/remove-px" name="border_width" var="border_width"/>
                                    <property converter="Magento_PageBuilder/js/converter/style/remove-px" name="border_radius" var="border_radius"/>
                                    <complex_property converter="Magento_PageBuilder/js/converter/style/margins-and-paddings" preview_converter="Magento_PageBuilder/js/content-type/row/converter/style/margins-and-paddings" reader="Magento_PageBuilder/js/property/margins-and-paddings" var="margins_and_padding"/>
                                </style_properties>
                                <attributes>
                                    <attribute name="data-role" var="name"/>
                                    <attribute name="data-appearance" var="appearance"/>
                                    <attribute name="data-enable-parallax" var="enable_parallax"/>
                                    <attribute name="data-parallax-speed" var="parallax_speed"/>
                                    <attribute var="background_color_format" name="data-background-color-format" virtual="true"/>
                                </attributes>
                                <css var="css_classes"/>
                            </element>
                        </elements>
                        <converters>
                            <converter name="preferred_color_format" component="Magento_PageBuilder/js/mass-converter/preferred-color-format">
                                <config>
                                    <item name="background_color_format" value="background_color_format"/>
                                </config>
                            </converter>
                        </converters>
                    </data_mapping>
                    <preview_template>Magento_PageBuilder/content-type/row/default/preview</preview_template>
                    <render_template>Magento_PageBuilder/content-type/row/default/master</render_template>
                    <reader>Magento_PageBuilder/js/master-format/read/configurable</reader>
                </appearance>
            </appearances>
        </type>
    </content_types>
</config>
