<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_type.xsd">
    <content_types>
        <type name="button-item" translate="label">
            <label>Button</label>
            <icon>icon-pagebuilder-button</icon>
            <component>Magento_PageBuilder/js/content-type-collection</component>
            <preview_component>Magento_PageBuilder/js/content-type/button-item/preview</preview_component>
            <content_component>Magento_PageBuilder/js/content-type/content</content_component>
            <form>pagebuilder_button_item_form</form>
            <group>general</group>
            <allowed_parents>
                <parent name="buttons"/>
            </allowed_parents>
            <is_visible>false</is_visible>
            <appearances>
                <appearance default="true" name="default">
                    <data_mapping>
                        <elements>
                            <element name="main" path=".">
                                <style_properties>
                                    <static_property source="display" value="inline-block"/>
                                </style_properties>
                                <attributes>
                                    <attribute source="name" name="data-role"/>
                                    <attribute name="data-appearance" source="appearance"/>
                                </attributes>
                            </element>
                            <element name="link" path="./a">
                                <style_properties>
                                    <property source="text_align" name="text_align"/>
                                    <property source="border" name="border_style" converter="Magento_PageBuilder/js/converter/style/border-style"/>
                                    <property source="border_color" name="border_color" converter="Magento_PageBuilder/js/converter/style/color"/>
                                    <property source="border_width" name="border_width" converter="Magento_PageBuilder/js/converter/style/border-width"/>
                                    <property source="border_radius" name="border_radius" converter="Magento_PageBuilder/js/converter/style/remove-px"/>
                                    <complex_property name="margins_and_padding" reader="Magento_PageBuilder/js/property/margins-and-paddings" converter="Magento_PageBuilder/js/converter/style/margins-and-paddings"/>
                                </style_properties>
                                <attributes>
                                    <complex_attribute name="button_link" persist="false" reader="Magento_PageBuilder/js/property/link"/>
                                    <attribute source="button_link" name="href" virtual="true" converter="Magento_PageBuilder/js/converter/attribute/link-href" />
                                    <attribute source="button_link" name="target" virtual="true" converter="Magento_PageBuilder/js/converter/attribute/link-target" />
                                    <attribute source="button_link" name="data-link-type" virtual="true" converter="Magento_PageBuilder/js/converter/attribute/link-type" />
                                </attributes>
                                <css name="button_type"/>
                            </element>
                            <element name="link_text" path="./a/span">
                                <html name="button_text"/>
                            </element>
                        </elements>
                    </data_mapping>
                    <preview_template>Magento_PageBuilder/content-type/button-item/default/preview</preview_template>
                    <render_template>Magento_PageBuilder/content-type/button-item/default/master</render_template>
                    <reader>Magento_PageBuilder/js/master-format/read/configurable</reader>
                </appearance>
            </appearances>
        </type>
    </content_types>
</config>
