<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminDeleteJsTranslationJsonActionGroup">
        <annotations>
            <description>Delete js translation json file.</description>
        </annotations>

        <executeInSelenium function="function(\Facebook\WebDriver\Remote\RemoteWebDriver $webdriver) {
            $file = new \SplFileInfo(MAGENTO_BP . '/pub/static/frontend/Magento/luma/en_US/js-translation.json');

            if ($file->isFile()) {
                unlink($file->getPathname());
            }
        } " stepKey="deleteJsTranslationJson"/>
    </actionGroup>
</actionGroups>
