<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Analytics:etc/reports.xsd">
    <report name="pagebuilder-page" connection="default">
        <source name="cms_page">
            <attribute name="content"/>
        </source>
    </report>
    <report name="pagebuilder-block" connection="default">
        <source name="cms_block">
            <attribute name="content"/>
        </source>
    </report>
    <report name="pagebuilder-product" connection="default">
        <source name="catalog_product_entity_text">
            <link-source name="eav_attribute">
                <attribute name="attribute_id"/>
                <using glue="and">
                    <condition attribute="attribute_code" operator="eq">description</condition>
                </using>
            </link-source>
            <attribute name="attribute_id"/>
            <attribute name="value"/>
        </source>
    </report>
    <report name="pagebuilder-category" connection="default">
        <source name="catalog_category_entity_text">
            <link-source name="eav_attribute">
                <attribute name="attribute_id"/>
                <using glue="and">
                    <condition attribute="attribute_code" operator="eq">description</condition>
                </using>
            </link-source>
            <attribute name="attribute_id"/>
            <attribute name="value"/>
        </source>
    </report>
</config>